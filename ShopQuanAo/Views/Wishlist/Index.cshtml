@model IEnumerable<ShopQuanAo.Models.Product>
@{
    ViewData["Title"] = "Yêu thích";
}

<div class="container my-4">

    <!-- Breadcrumbs -->
    <div class="breadcrumbs d-flex flex-row align-items-center mb-3">
        <ul>
            <li><a asp-controller="Home" asp-action="Index">Trang Chủ</a></li>
            <li class="active">
                <a href="#"><i class="fa fa-angle-right"></i> @ViewData["Title"]</a>
            </li>
        </ul>
    </div>

    @if (!(Model?.Any() ?? false))
    {
        <!-- EMPTY STATE -->
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-6">
                <div class="text-center py-5 px-3 bg-light border rounded-4 shadow-sm">
                    <div class="display-5 mb-3 text-danger">
                        <i class="fa fa-heart"></i>
                    </div>
                    <h5 class="fw-bold mb-2">Danh sách yêu thích trống</h5>
                    <p class="text-muted mb-3">
                        Hãy bấm vào biểu tượng <i class="fa fa-heart text-danger"></i> trên sản phẩm để thêm vào yêu thích.
                    </p>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-dark rounded-pill px-4">
                        Xem sản phẩm
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- ONLY LIST – CENTERED + BALANCED -->
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 fw-semibold">
                            <i class="fa fa-heart text-danger me-1"></i>
                            Sản phẩm yêu thích
                            <span class="badge bg-dark rounded-pill ms-1">@Model.Count()</span>
                        </h5>
                    </div>

                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width:12%">Ảnh</th>
                                        <th>Sản phẩm</th>
                                        <th class="text-end d-none d-md-table-cell" style="width:15%">Giá</th>
                                        <th class="text-end" style="width:15%"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var p in Model)
                                    {
                                        var img = Url.Content(p.ImageUrl ?? "~/images/product_1.png");

                                        <tr>
                                            <td>
                                                <a asp-controller="Product" asp-action="Detail" asp-route-id="@p.Id">
                                                    <img src="@img" alt="@p.Name"
                                                         class="rounded"
                                                         style="width:70px;height:70px;object-fit:cover;" />
                                                </a>
                                            </td>

                                            <td>
                                                <div class="fw-semibold text-truncate">@p.Name</div>
                                                <div class="text-muted small">@p.Category</div>

                                                <!-- Mobile price -->
                                                <div class="d-md-none mt-1 small">
                                                    <span class="text-muted me-1">Giá:</span>
                                                    <strong>@p.Price.ToString("N0") ₫</strong>
                                                </div>
                                            </td>

                                            <td class="text-end d-none d-md-table-cell">
                                                @p.Price.ToString("N0") ₫
                                            </td>

                                            <td class="text-end">
                                                <div class="d-inline-flex gap-2">
                                                    <a class="btn btn-dark btn-sm"
                                                       asp-controller="Product"
                                                       asp-action="Detail"
                                                       asp-route-id="@p.Id">
                                                        Xem
                                                    </a>

                                                    <form asp-controller="Wishlist" asp-action="Remove" method="post" class="m-0">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="productId" value="@p.Id" />
                                                        <button class="btn btn-outline-danger btn-sm" type="submit" title="Xoá">
                                                            <i class="fa fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="card-footer bg-white py-3 text-end">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-dark rounded-pill">
                            <i class="fa fa-arrow-left me-1"></i>Tiếp tục mua sắm
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
