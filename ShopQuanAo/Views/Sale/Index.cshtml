@model IEnumerable<ShopQuanAo.Models.Product>
@{
    ViewData["Title"] = "Khuyến Mãi";

    Func<string?, string> imgSrc = (u) =>
    {
        if (string.IsNullOrWhiteSpace(u)) return Url.Content("~/images/product_1.png");
        var s = u.Trim();
        if (s.StartsWith("http", StringComparison.OrdinalIgnoreCase)) return s;
        if (s.StartsWith("~/")) return Url.Content(s);
        if (s.StartsWith("/")) return s;
        return Url.Content($"~/images/{s}");
    };

    // Tạo list có index để giữ thứ tự ban đầu
    var productsWithIndex = Model
        .Select((p, idx) => new
        {
            Product = p,
            Index = idx
        })
        .ToList();
}

@section Styles {
    <link href="~/bootstrap4/bootstrap.min.css">
    <link href="~/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/plugins/OwlCarousel2-2.2.1/owl.carousel.css" rel="stylesheet">
    <link href="~/plugins/OwlCarousel2-2.2.1/owl.theme.default.css" rel="stylesheet">
    <link href="~/plugins/OwlCarousel2-2.2.1/animate.css" rel="stylesheet">
    <link href="~/css/responsive.css" rel="stylesheet">
    <link href="~/css/main_styles.css" rel="stylesheet">
    <link href="~/css/categories_styles.css" rel="stylesheet">
    <link href="~/css/categories_responsive.css" rel="stylesheet">
    <link href="~/css/sale.css" rel="stylesheet">
}

<div class="container">
    <div class="row">
        <div class="col product_section clearfix">

            <!-- Breadcrumbs -->
            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Trang Chủ</a></li>
                    <li class="active">
                        <a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i> @ViewData["Title"]</a>
                    </li>
                </ul>
            </div>

            @if (ViewBag.HasFlashSale == true)
            {
                <div class="mb-3">
                    @await Component.InvokeAsync("FlashSaleHero")
                </div>
            }

            <!-- Main Content -->
            <div class="main">
                <div class="products_iso">
                    <div class="row">
                        <div class="col">

                            <!-- Product Sorting + Paging Toolbar -->
                            <div class="product_sorting_container product_sorting_container_top">
                                <ul class="product_sorting">
                                    <li class="sorting-group">
                                        <span class="sort-label">
                                            Sắp Xếp Theo - (<span class="current_sort_value" id="currentSortText">Mặc Định</span>)
                                        </span>
                                        <i class="fa fa-angle-down"></i>

                                        <ul class="sorting_type">
                                            <li class="type_sorting_btn active-sort text-start"
                                                data-sortby="original"
                                                data-sorttext=" Mặc Định">
                                                <span>Mặc Định</span>
                                            </li>
                                            <li class="type_sorting_btn text-start"
                                                data-sortby="price"
                                                data-sortasc="true"
                                                data-sorttext=" Giá: Thấp → Cao">
                                                <span>Giá: Thấp → Cao</span>
                                            </li>
                                            <li class="type_sorting_btn text-start"
                                                data-sortby="price"
                                                data-sortasc="false"
                                                data-sorttext=" Giá: Cao → Thấp">
                                                <span>Giá: Cao → Thấp</span>
                                            </li>
                                            <li class="type_sorting_btn text-start"
                                                data-sortby="name"
                                                data-sorttext=" Tên">
                                                <span>Tên</span>
                                            </li>
                                        </ul>
                                    </li>

                                    <li class="ms-3">
                                        <div class="paging-toolbar">
                                            <span class="fw-semibold">Tổng SP:</span>
                                            <strong id="totalCount">@Model.Count()</strong>

                                            <span class="ms-2 fw-semibold">SP/trang:</span>
                                            <select id="quickSize" class="form-select form-select-sm d-inline-block w-auto">
                                                <option value="" selected>Chọn</option>
                                                <option value="4">4</option>
                                                <option value="8">8</option>
                                                <option value="12">12</option>
                                            </select>

                                        </div>
                                    </li>
                                </ul>
                            </div>

                            <hr />

                            <!-- Product Grid -->
                            <div class="product-grid row g-2">
                                @if (productsWithIndex.Any())
                                {
                                    @foreach (var wrap in productsWithIndex)
                                    {
                                        var product = wrap.Product;
                                        var idx = wrap.Index;

                                        var hasOld = product.OldPrice.HasValue
                                        && product.OldPrice.Value > product.Price
                                        && product.OldPrice.Value > 0;
                                        var discount = hasOld
                                        ? Math.Round((product.OldPrice.Value - product.Price) / product.OldPrice.Value * 100M)
                                        : 0;

                                        <div class="product-item @product.Category col-12 col-sm-6 col-md-4 col-lg-3 mb-3"
                                             data-original-order="@idx"
                                             data-price="@product.Price"
                                             data-name="@product.Name">
                                            <div class="product @(product.IsOnSale ? "discount" : "") h-100 d-flex flex-column">
                                                <div class="product_image text-center" style="padding:10px">
                                                    <img src="@imgSrc(product.ImageUrl)"
                                                         alt="@product.Name"
                                                         style="height:240px; max-width:100%; object-fit:contain;">
                                                </div>

                                                @if (product.IsOnSale && hasOld)
                                                {
                                                    <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center">
                                                        <span>-@discount%</span>
                                                    </div>
                                                }

                                                <div class="product_info mt-auto p-2">
                                                    <h6 class="product_name" style="min-height:38px">
                                                        <a asp-controller="Product"
                                                           asp-action="Detail"
                                                           asp-route-id="@product.Id">
                                                            @product.Name
                                                        </a>
                                                    </h6>
                                                    <div class="product_price">
                                                        @product.Price.ToString("N0")đ
                                                        @if (hasOld)
                                                        {
                                                            <span>@product.OldPrice!.Value.ToString("N0")đ</span>
                                                        }
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="red_button add_to_cart_button text-center">
                                                <a asp-controller="Cart"
                                                   asp-action="Add"
                                                   asp-route-Id="@product.Id">
                                                    Thêm Vào Giỏ
                                                </a>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="col-12 text-center py-5">
                                        <h4>Chưa có sản phẩm giảm giá</h4>
                                        <p>Vui lòng quay lại sau nhé!</p>
                                    </div>
                                }
                            </div> <!-- /product-grid -->
                        </div>
                    </div>
                    <div class="pagination-bar my-4 d-flex justify-content-center">
                        <div class="d-flex justify-content-center align-items-center gap-1 flex-wrap">
                            <button class="btn btn-outline-secondary" id="btnFirst" title="Trang đầu">«</button>
                            <button class="btn btn-outline-secondary" id="btnPrev" title="Trang trước">‹</button>

                            <div class="page-nums" id="pageNums"></div>

                            <button class="btn btn-outline-secondary" id="btnNext" title="Trang sau">›</button>
                            <button class="btn btn-outline-secondary" id="btnLast" title="Trang cuối">»</button>
                        </div>
                    </div>
                </div> <!-- /products_iso -->
            </div> <!-- /main_content -->
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/styles/bootstrap4/popper.js"></script>
    <script src="~/styles/bootstrap4/bootstrap.min.js"></script>
    <script src="~/plugins/Isotope/isotope.pkgd.min.js"></script>
    <script src="~/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
    <script src="~/plugins/easing/easing.js"></script>
    <script src="~/js/custom.js"></script>
    <script src="~/js/sale.js"></script>
}
