@{
    ViewData["Title"] = "Xác Nhận Quên Mật Khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - Shop Quần Áo</title>

    <!-- Fonts & Icons -->
    <link rel="stylesheet" href="~/plugins/font-awesome-4.7.0/css/font-awesome.min.css" />

    <!-- Bootstrap & Argon -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/argon-dashboard.min.css" />

    <style>
        body {
            background: linear-gradient(135deg, #f3f4f6, #e2e8f0);
            font-family: 'Roboto', sans-serif;
        }

        .login-card {
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            background-color: #fff;
        }

        .login-left {
            background-image: url('https://images.unsplash.com/photo-1521334884684-d80222895322?auto=format&fit=crop&w=800&q=80');
            background-size: cover;
            background-position: center;
            border-radius: 15px 0 0 15px;
            position: relative;
        }

            .login-left::after {
                content: "";
                position: absolute;
                inset: 0;
                background: rgba(0, 0, 0, 0.4);
                border-radius: 15px 0 0 15px;
            }

        .login-left-text {
            position: relative;
            z-index: 2;
        }

        .navbar {
            backdrop-filter: blur(10px);
            background-color: rgba(255, 255, 255, 0.8);
        }

        @@media (max-width: 992px) {
            .login-left {
                display: none;
            }

            .login-card {
                border-radius: 15px;
            }
        }

        .btn-primary {
            border-radius: 10px;
            font-weight: 600;
        }

        .alert {
            border-radius: 10px;
        }

        .success-icon {
            font-size: 70px;
            color: #2e7d32;
        }

        .warning-icon {
            font-size: 70px;
            color: #ff9800;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg shadow-sm fixed-top">
        <div class="container">
            <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fa fa-shopping-bag me-2"></i>Shop Quần Áo
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center gap-3">
                    <li class="nav-item">
                        <a class="nav-link menu-link active" asp-controller="Home" asp-action="Index">Trang Chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link menu-link" asp-controller="Shop" asp-action="Index">Sản Phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link menu-link" asp-controller="Home" asp-action="Contact">Liên Hệ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link menu-link register-link" asp-action="Register">Đăng ký</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Confirm Forgot Password Section -->
    <section class="d-flex align-items-center justify-content-center min-vh-100 mt-5 pt-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-9 col-xl-8">
                    <div class="card login-card overflow-hidden">
                        <div class="row g-0">
                            <!-- Left image -->
                            <div class="col-lg-6 login-left d-flex align-items-center justify-content-center text-center text-white">
                                <div class="login-left-text px-4">
                                    <h3 class="fw-bold mb-3">Xác Nhận Yêu Cầu</h3>
                                    <p>Chúng tôi đã gửi hướng dẫn đặt lại mật khẩu đến email của bạn.</p>
                                </div>
                            </div>

                            <!-- Right content -->
                            <div class="col-lg-6 p-5 text-center">
                                <h4 class="fw-bold text-primary mb-4">Xác Nhận Quên Mật Khẩu</h4>

                                @if (TempData["Success"] != null)
                                {
                                    <div class="mb-4">
                                        <i class="fa fa-check-circle success-icon"></i>
                                    </div>
                                    <div class="alert alert-success fw-semibold border-0">
                                        @TempData["Success"]
                                    </div>
                                    <p class="lead text-muted mt-3">
                                        Vui lòng kiểm tra hộp thư của bạn để xem hướng dẫn đặt lại mật khẩu.
                                    </p>
                                }
                                else if (TempData["Warning"] != null)
                                {
                                    <div class="mb-4">
                                        <i class="fa fa-exclamation-triangle warning-icon"></i>
                                    </div>
                                    <div class="alert alert-warning fw-semibold border-0">
                                        @TempData["Warning"]
                                    </div>

                                    @if (TempData["ResetLink"] != null)
                                    {
                                        <div class="mt-4">
                                            <a href="@TempData["ResetLink"]" class="btn btn-primary w-100">
                                                <i class="fa fa-key me-2"></i> Đặt Lại Mật Khẩu Ngay
                                            </a>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="mb-4">
                                        <i class="fa fa-info-circle warning-icon"></i>
                                    </div>
                                    <p class="lead text-muted">
                                        Vui lòng kiểm tra email của bạn để biết hướng dẫn đặt lại mật khẩu.
                                    </p>
                                }

                                <div class="mt-5">
                                    <a asp-action="Login" class="btn btn-primary w-100">
                                        <i class="fa fa-arrow-left me-2"></i> Quay Lại Trang Đăng Nhập
                                    </a>
                                </div>
                            </div>
                            <!-- /Right -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/argon-dashboard.min.js"></script>
</body>
</html>
