@{
    ViewData["Title"] = "Xác Nhận Quên Mật Khẩu";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-success text-white text-center py-4">
                    <h3 class="font-weight-light mb-0">Email Đã Được Gửi</h3>
                </div>
                <div class="card-body p-4 text-center">
                    @if (TempData["Success"] != null)
                    {
                        <div class="mb-4">
                            <i class="fa fa-check-circle text-success" style="font-size: 72px;"></i>
                        </div>
                        <div class="alert alert-success" role="alert">
                            @TempData["Success"]
                        </div>
                        <p class="lead">
                            Vui lòng kiểm tra email của bạn để biết hướng dẫn đặt lại mật khẩu.
                        </p>
                    }
                    else if (TempData["Warning"] != null)
                    {
                        <div class="mb-4">
                            <i class="fa fa-exclamation-triangle text-warning" style="font-size: 72px;"></i>
                        </div>
                        <div class="alert alert-warning" role="alert">
                            @TempData["Warning"]
                        </div>
                        @if (TempData["ResetLink"] != null)
                        {
                            <div class="mt-3">
                                <a href="@TempData["ResetLink"]" class="btn btn-danger btn-lg">
                                    <i class="fa fa-key"></i> Đặt lại mật khẩu ngay
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="mb-4">
                            <i class="fa fa-check-circle text-success" style="font-size: 72px;"></i>
                        </div>
                        <p class="lead">
                            Vui lòng kiểm tra email của bạn để biết hướng dẫn đặt lại mật khẩu.
                        </p>
                    }
                    
                    <div class="mt-4">
                        <a asp-action="Login" class="btn btn-primary">Về trang đăng nhập</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



