@model ShopQuanAo.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng Ký";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - Shop Quần Áo</title>

    <!-- Bootstrap & FontAwesome -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/plugins/font-awesome-4.7.0/css/font-awesome.min.css" />

    <style>
        body {
            background: linear-gradient(135deg, #f3f4f6, #e2e8f0);
            font-family: 'Roboto', sans-serif;
        }

        .navbar {
            backdrop-filter: blur(10px);
            background-color: rgba(255, 255, 255, 0.8);
        }

        .register-card {
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            background-color: #fff;
        }

        .register-left {
            background-image: url('https://images.unsplash.com/photo-1521334884684-d80222895322?auto=format&fit=crop&w=900&q=80');
            background-size: cover;
            background-position: center;
            border-radius: 15px 0 0 15px;
            position: relative;
        }

            .register-left::after {
                content: "";
                position: absolute;
                inset: 0;
                background: rgba(0, 0, 0, 0.45);
                border-radius: 15px 0 0 15px;
            }

        .register-left-text {
            position: relative;
            z-index: 2;
            text-align: center;
            color: #fff;
        }

        .form-control {
            border-radius: 10px;
        }

        .btn-primary {
            border-radius: 10px;
            font-weight: 600;
        }

        .alert {
            border-radius: 10px;
        }

        @@media (max-width: 992px) {
            .register-left {
                display: none;
            }

            .register-card {
                border-radius: 15px;
            }
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg shadow-sm fixed-top">
        <div class="container">
            <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fa fa-shopping-bag me-2"></i>Shop Quần Áo
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center gap-3">
                    <li class="nav-item">
                        <a class="nav-link menu-link active" asp-controller="Home" asp-action="Index">Trang Chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link menu-link" asp-controller="Shop" asp-action="Index">Sản Phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link menu-link" asp-controller="Home" asp-action="Contact">Liên Hệ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link menu-link register-link" asp-action="Login">Đăng nhập</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Register Section -->
    <section class="d-flex align-items-center justify-content-center min-vh-100 mt-5 pt-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-9 col-xl-8">
                    <div class="card register-card overflow-hidden">
                        <div class="row g-0">
                            <!-- Left Image -->
                            <div class="col-lg-6 register-left d-flex align-items-center justify-content-center">
                                <div class="register-left-text px-4">
                                    <h3 class="fw-bold mb-3">Tạo tài khoản mới</h3>
                                    <p>Gia nhập ngay để nhận ưu đãi và mua sắm nhanh chóng!</p>
                                </div>
                            </div>

                            <!-- Right Form -->
                            <div class="col-lg-6 p-5">
                                <h4 class="fw-bold mb-3 text-center text-primary">Đăng Ký</h4>
                                <p class="text-muted text-center mb-4">Nhập thông tin của bạn để tạo tài khoản</p>

                                @if (TempData["Success"] != null)
                                {
                                    <div class="alert alert-success text-center">@TempData["Success"]</div>
                                }
                                else if (TempData["Warning"] != null)
                                {
                                    <div class="alert alert-warning text-center">@TempData["Warning"]</div>
                                    @if (TempData["ConfirmLink"] != null)
                                    {
                                        <div class="text-center mt-2">
                                            <a href="@TempData["ConfirmLink"]" class="text-primary">Nhấn vào đây để xác nhận</a>
                                        </div>
                                    }
                                }

                                <form asp-action="Register" method="post">
                                    <div class="mb-3">
                                        <label asp-for="FullName" class="form-label">Họ và tên</label>
                                        <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên" />
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="Email" class="form-label">Email</label>
                                        <input asp-for="Email" class="form-control" placeholder="Nhập email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                                        <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="Password" class="form-label">Mật khẩu</label>
                                        <input asp-for="Password" class="form-control" type="password" placeholder="Nhập mật khẩu" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
                                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Nhập lại mật khẩu" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>

                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa fa-user-plus me-2"></i>Đăng Ký
                                        </button>
                                    </div>
                                </form>

                                <div class="text-center mt-4">
                                    <p>
                                        Đã có tài khoản?
                                        <a asp-action="Login" class="fw-bold text-primary">Đăng nhập ngay</a>
                                    </p>
                                </div>
                            </div>
                            <!-- /col -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
