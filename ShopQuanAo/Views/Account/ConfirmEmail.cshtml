@{
    ViewData["Title"] = "Xác Nhận Email";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-info text-white text-center py-4">
                    <h3 class="font-weight-light mb-0">Xác Nhận Email</h3>
                </div>
                <div class="card-body p-4 text-center">
                    <div class="mb-4">
                        @if (ViewBag.Message != null && ViewBag.Message.Contains("Cảm ơn"))
                        {
                            <i class="fa fa-check-circle text-success" style="font-size: 72px;"></i>
                        }
                        else
                        {
                            <i class="fa fa-times-circle text-danger" style="font-size: 72px;"></i>
                        }
                    </div>
                    <p class="lead">
                        @ViewBag.Message
                    </p>
                    <div class="mt-4">
                        <a asp-action="Login" class="btn btn-primary">Đăng Nhập</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



