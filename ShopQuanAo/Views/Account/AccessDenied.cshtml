@{
    ViewData["Title"] = "Từ Chối Truy Cập";
}

@section Styles {
    <!-- Fonts & Icons -->
    <link rel="stylesheet" href="~/plugins/font-awesome-4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/argon-dashboard.min.css" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #f3f4f6, #e2e8f0);
            color: #333;
            height: 100vh;
        }

        .card {
            border-radius: 1.25rem !important;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
        }

        .btn-primary {
            background-color: #5e72e4;
            border: none;
            font-weight: 600;
        }

            .btn-primary:hover {
                background-color: #4c63d8;
            }

        .btn-outline-primary {
            color: #5e72e4;
            border-color: #5e72e4;
            font-weight: 600;
        }

            .btn-outline-primary:hover {
                background-color: #5e72e4;
                color: #fff;
            }

        .page-header {
            background: transparent;
        }

        .mask {
            background: rgba(94, 114, 228, 0.5);
        }

        .access-card {
            background: #fff;
            border-radius: 20px;
            padding: 40px 30px;
            text-align: center;
            animation: fadeInUp 0.6s ease;
        }

            .access-card i {
                font-size: 4rem;
            }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }
    </style>
}

    <main class="main-content mt-5 mb-5 pt-4">
        <section>
            <div class="page-header min-vh-100">
                <div class="container d-flex align-items-center justify-content-center">
                    <div class="row w-100 justify-content-center">
                        <div class="col-lg-5 col-md-7">
                            <div class="access-card border-1">
                                <div class="mb-3">
                                    <i class="fa fa-ban text-danger"></i>
                                </div>
                                <h4 class="fw-bold text-danger mb-2">Từ Chối Truy Cập</h4>
                                <p class="text-muted mb-4">
                                    Bạn không có quyền truy cập vào trang này.<br />
                                    (Lỗi 403 - Truy cập bị hạn chế)
                                </p>

                                <div class="d-grid gap-2 mb-4">
                                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                                        <i class="fa fa-home me-2"></i>Về Trang Chủ
                                    </a>
                                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary">
                                        <i class="fa fa-sign-in me-2"></i>Đăng Nhập Khác
                                    </a>
                                    <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary">
                                        <i class="fa fa-user-plus me-2"></i>Tạo Tài Khoản Mới
                                    </a>
                                </div>

                                <div class="text-center">
                                    <small class="text-muted">
                                        <i class="fa fa-info-circle text-info me-1"></i>
                                        Nếu bạn nghĩ đây là lỗi, vui lòng liên hệ quản trị viên.
                                    </small><br />
                                    <a asp-controller="Home" asp-action="Contact" class="btn btn-sm btn-info mt-2">
                                        <i class="fa fa-envelope me-1"></i>Liên Hệ Hỗ Trợ
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Ảnh nền bên phải -->
                        <div class="col-lg-6 d-none d-lg-flex align-items-center justify-content-center">
                            <div class="position-relative border-radius-lg overflow-hidden w-100 h-100"
                                 style="background: url('https://images.unsplash.com/photo-1578662996442-48f60103fc96?auto=format&fit=crop&w=1350&q=80') center/cover no-repeat;">
                                <span class="mask"></span>
                                <div class="text-center position-relative  border-1 text-white p-5">
                                    <h3 class="fw-bold">Truy Cập Bị Từ Chối</h3>
                                    <p class="mb-0">Khu vực này chỉ dành cho quản trị viên.<br />Vui lòng liên hệ admin để được cấp quyền.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
}

@section Footer { }