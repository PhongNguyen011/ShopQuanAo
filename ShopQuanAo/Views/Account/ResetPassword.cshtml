@model ShopQuanAo.Models.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Đặt Lại Mật Khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - Shop Quần Áo</title>

    <!-- Fonts and icons -->
    <link rel="stylesheet" href="~/plugins/font-awesome-4.7.0/css/font-awesome.min.css" />

    <!-- Bootstrap & Argon -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/argon-dashboard.min.css" />

    <style>
        body {
            background: linear-gradient(135deg, #f3f4f6, #e2e8f0);
            font-family: 'Roboto', sans-serif;
        }

        .reset-card {
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            background-color: #fff;
        }

        .reset-left {
            background-image: url('https://images.unsplash.com/photo-1512436991641-6745cdb1723f?auto=format&fit=crop&w=800&q=80');
            background-size: cover;
            background-position: center;
            border-radius: 15px 0 0 15px;
            position: relative;
        }

            .reset-left::after {
                content: "";
                position: absolute;
                inset: 0;
                background: rgba(0, 0, 0, 0.4);
                border-radius: 15px 0 0 15px;
            }

        .reset-left-text {
            position: relative;
            z-index: 2;
        }

        .navbar {
            backdrop-filter: blur(10px);
            background-color: rgba(255, 255, 255, 0.8);
        }

        @@media (max-width: 992px) {
            .reset-left {
                display: none;
            }

            .reset-card {
                border-radius: 15px;
            }
        }

        .form-control {
            border-radius: 10px;
        }

        .btn-primary {
            border-radius: 10px;
            font-weight: 600;
        }

        .alert {
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg shadow-sm fixed-top">
        <div class="container">
            <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fa fa-shopping-bag me-2"></i>Shop Quần Áo
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center gap-3">
                    <li class="nav-item">
                        <a class="nav-link menu-link" asp-controller="Home" asp-action="Index">Trang Chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link menu-link" asp-controller="Shop" asp-action="Index">Sản Phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link menu-link" asp-controller="Home" asp-action="Contact">Liên Hệ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link menu-link register-link" asp-action="Register">Đăng ký</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Reset Password Section -->
    <section class="d-flex align-items-center justify-content-center min-vh-100 mt-5 pt-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-9 col-xl-8">
                    <div class="card reset-card overflow-hidden">
                        <div class="row g-0">
                            <!-- Left image -->
                            <div class="col-lg-6 reset-left d-flex align-items-center justify-content-center text-center text-white">
                                <div class="reset-left-text px-4">
                                    <h3 class="fw-bold mb-3">Quên mật khẩu?</h3>
                                    <p>Hãy đặt lại mật khẩu mới để tiếp tục hành trình mua sắm của bạn.</p>
                                </div>
                            </div>

                            <!-- Right form -->
                            <div class="col-lg-6 p-5">
                                <h4 class="fw-bold mb-3 text-center text-primary">Đặt Lại Mật Khẩu</h4>
                                <p class="text-muted text-center mb-4">Nhập email và mật khẩu mới của bạn</p>

                                @if (TempData["Success"] != null)
                                {
                                    <div class="alert alert-success alert-dismissible fade show">
                                        <i class="fa fa-check me-2"></i>@TempData["Success"]
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                    </div>
                                }

                                @if (TempData["Error"] != null)
                                {
                                    <div class="alert alert-danger alert-dismissible fade show">
                                        <i class="fa fa-exclamation-circle me-2"></i>@TempData["Error"]
                                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                    </div>
                                }

                                <form asp-action="ResetPassword" method="post">
                                    <input asp-for="Code" type="hidden" />
                                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                                    <div class="mb-3">
                                        <label asp-for="Email" class="form-label">Email</label>
                                        <input asp-for="Email" class="form-control" placeholder="Nhập email..." />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="Password" class="form-label">Mật Khẩu Mới</label>
                                        <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu mới..." />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="ConfirmPassword" class="form-label">Xác Nhận Mật Khẩu</label>
                                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Xác nhận mật khẩu..." />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>

                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa fa-lock me-2"></i>Đặt Lại Mật Khẩu
                                        </button>
                                    </div>

                                    <div class="text-center mt-3">
                                        <a asp-action="Login" class="text-decoration-none text-primary">
                                            <i class="fa fa-arrow-left me-1"></i> Quay lại đăng nhập
                                        </a>
                                    </div>
                                </form>
                            </div>
                            <!-- /col -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/argon-dashboard.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
