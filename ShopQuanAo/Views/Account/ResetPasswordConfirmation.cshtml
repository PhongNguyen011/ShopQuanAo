@{
    ViewData["Title"] = "Xác Nhận Đặt Lại Mật Khẩu";
}

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #f3f4f6, #e2e8f0);
            font-family: 'Roboto', sans-serif;
        }
    </style>
}

<div class="auth-page d-flex align-items-center justify-content-center mt-5 pt-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="card border-0 shadow-lg overflow-hidden rounded-4">
                    <div class="row g-0">
                        <!-- Bên trái: Ảnh nền -->
                        <div class="col-md-5 d-none d-md-block"
                             style="background: url('https://images.unsplash.com/photo-1512436991641-6745cdb1723f?auto=format&fit=crop&w=800&q=80') center/cover no-repeat; opacity: 0.9;">
                        </div>

                        <!-- Bên phải: Nội dung -->
                        <div class="col-md-7 bg-white">
                            <div class="card-body p-5 text-center d-flex flex-column justify-content-center">
                                <div class="mb-4">
                                    <h3 class="fw-bold text-primary mb-2">Đặt Lại Mật Khẩu Thành Công</h3>
                                    <hr class="mx-auto" style="width: 80px; height: 3px; background-color: #5e72e4; border: none;">
                                </div>

                                <div class="mb-4">
                                    <i class="fa fa-check-circle text-success" style="font-size: 70px;"></i>
                                </div>

                                @if (TempData["Success"] != null)
                                {
                                    <div class="alert alert-success fw-semibold px-4 py-3 mb-4">
                                        @TempData["Success"]
                                    </div>
                                }
                                else
                                {
                                    <p class="lead text-muted mb-2">
                                        Mật khẩu của bạn đã được đặt lại thành công!
                                    </p>
                                    <p class="text-secondary">
                                        Bạn có thể đăng nhập bằng mật khẩu mới của mình.
                                    </p>
                                }

                                <div class="mt-4">
                                    <a asp-action="Login"
                                       class="btn btn-primary btn-lg rounded-pill fw-semibold"
                                       style="background-color: #5e72e4; border: 1px solid #4b63d8;">
                                        <i class="fa fa-sign-in-alt me-2"></i> Đăng Nhập
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div> <!-- end row -->
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .auth-page {
        font-family: 'Segoe UI', sans-serif;
        color: #333;
    }

    .card {
        border-radius: 1.5rem !important;
    }

    .text-primary {
        color: #5e72e4 !important;
    }

    .btn-primary {
        background-color: #5e72e4 !important;
        border-color: #4b63d8 !important;
        transition: all 0.3s ease-in-out;
    }

        .btn-primary:hover {
            background-color: #4b63d8 !important;
        }

    .alert-success {
        border-radius: 12px;
        background-color: #e9f7ef;
        color: #2e7d32;
        border: none;
    }

    hr {
        opacity: 1;
    }
</style>


@section Footer { }