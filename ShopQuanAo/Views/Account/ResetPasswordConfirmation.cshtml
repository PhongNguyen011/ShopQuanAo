@{
    ViewData["Title"] = "Xác Nhận Đặt Lại Mật Khẩu";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-success text-white text-center py-4">
                    <h3 class="font-weight-light mb-0">Đặt Lại Mật Khẩu Thành Công</h3>
                </div>
                <div class="card-body p-4 text-center">
                    @if (TempData["Success"] != null)
                    {
                        <div class="mb-4">
                            <i class="fa fa-check-circle text-success" style="font-size: 72px;"></i>
                        </div>
                        <div class="alert alert-success" role="alert">
                            @TempData["Success"]
                        </div>
                    }
                    else
                    {
                        <div class="mb-4">
                            <i class="fa fa-check-circle text-success" style="font-size: 72px;"></i>
                        </div>
                        <p class="lead">
                            Mật khẩu của bạn đã được đặt lại thành công!
                        </p>
                        <p>Bạn có thể đăng nhập bằng mật khẩu mới của mình.</p>
                    }
                    
                    <div class="mt-4">
                        <a asp-action="Login" class="btn btn-primary">Đăng Nhập</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



