@using Microsoft.AspNetCore.Identity
@inject UserManager<ShopQuanAo.Models.ApplicationUser> UserManager
@inject ShopQuanAo.Services.ICartService CartService

@{
    string? avatarPath = null;
    var cartCount = CartService?.Count() ?? 0;
    if (User.Identity?.IsAuthenticated ?? false)
    {
        var currentUser = await UserManager.GetUserAsync(User);
        avatarPath = !string.IsNullOrEmpty(currentUser?.AvatarFileName)
            ? Url.Content($"~/images/account/{currentUser.AvatarFileName}")
            : Url.Content("~/images/account/_default.png");
    }
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>PNT Shop - @ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap 5 CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Font Awesome 4.7 (CDN) -> hợp với class 'fa fa-...' bạn đang dùng -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

    <!-- CSS chung của app -->
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/breadcrumbs_styles.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Top bar -->
    <div class="topbar">
        <div class="container"><span>Miễn Phí Giao Hàng Cho Đơn Từ 500.000VND !</span></div>
    </div>

    <!-- Header -->
    <header class="site-header">
        <div class="container py-3">
            <div class="main-nav d-flex align-items-center justify-content-between">
                <div class="logo_container">
                    <i class="fa fa-anchor" aria-hidden="true"></i>
                    <a asp-controller="Home" asp-action="Index">PNT<span>Shop</span></a>
                </div>

                <nav aria-label="Main Navigation">
                    <ul class="navbar_menu">
                        <li class="menu_item"><a asp-controller="Home" asp-action="Index">Trang Chủ</a></li>
                        <li class="menu_item"><a asp-controller="Product" asp-action="Index">Sản Phẩm</a></li>
                        <li class="menu_item"><a asp-controller="Sale" asp-action="Index">Khuyến Mãi</a></li>
                        <li class="menu_item"><a href="#">Cửa Hàng</a></li>
                        <li class="menu_item"><a asp-controller="Posts" asp-action="Index">Bài Viết</a></li>
                        <li class="menu_item"><a asp-controller="Contact" asp-action="Index">Liên Hệ</a></li>
                    </ul>
                </nav>

                <ul class="navbar_user">
                    <li><a class="icon-btn" href="#"><i class="fa fa-search"></i></a></li>
                    <li>
                        <a class="icon-btn position-relative" asp-controller="Cart" asp-action="Index">
                            <i class="fa fa-shopping-bag"></i>
                            <span class="badge-cart" id="cart-count">@cartCount</span>
                        </a>
                    </li>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <!-- ✅ Nếu CHƯA đăng nhập -->
                        <li>
                            <a class="icon-btn" asp-controller="Account" asp-action="Login">
                                <i class="fa fa-sign-in"></i>
                            </a>
                        </li>
                    }
                    else
                    {
                        <!-- ✅ Nếu ĐÃ đăng nhập -->
                        <li class="nav-item user-menu">
                            <a class="icon-btn">
                                <i class="fa fa-user-o"></i>
                            </a>
                            <div class="user-dropdown">
                                <div class="user-info">
                                    <div class="d-flex align-items-center">
                                        <a asp-controller="Profile" asp-action="Index">
                                            <img src="@avatarPath" alt="Avatar"
                                                 class="rounded-circle border me-3"
                                                 style="width:45px;height:45px;object-fit:cover;" />
                                        </a>
                                        <div class="d-flex flex-column justify-content-center align-items-sm-center">
                                            <small class="text-dark fw-bold">Thành viên</small>
                                            <div class="fw-bold brand-name">
                                                <i class="fa fa-anchor me-1" aria-hidden="true"></i>
                                                <span>PNT</span>
                                                <span class="text-danger">SHOP</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="fw-semibold">
                                        <span>@User.Identity.Name</span>
                                    </div>
                                </div>

                                <hr class="my-2" />
                                <form asp-controller="" asp-action="" method="post">
                                    <button type="submit" class="btn btn-sm btn-outline-dark fw-bold w-100">Đổi mật khẩu</button>
                                </form>
                                <form asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="btn btn-sm btn-outline-dark fw-bold w-100 mt-1">Đăng xuất</button>
                                </form>
                            </div>
                        </li>
                    }
                </ul>

                <!-- Nút mở menu mobile (ẩn trên màn lớn) -->
                <button class="btn mobile-menu-toggle d-lg-none" type="button" aria-label="Mở menu">
                    <i class="fa fa-bars fa-lg"></i>
                </button>
            </div>
        </div>
    </header>

    <!-- Overlay tối -->
    <div class="fs_menu_overlay" id="menuOverlay" hidden></div>

    <!-- Menu mobile trượt -->
    <div class="hamburger_menu">
        <div class="hamburger_close"><i class="fa fa-times" aria-hidden="true"></i></div>
        <div class="hamburger_menu_content text-right">
            <ul class="menu_top_nav">
                <li class="menu_item has-children">
                    <a href="#">
                        usd
                        <i class="fa fa-angle-down"></i>
                    </a>
                    <ul class="menu_selection">
                        <li><a href="#">cad</a></li>
                        <li><a href="#">aud</a></li>
                        <li><a href="#">eur</a></li>
                        <li><a href="#">gbp</a></li>
                    </ul>
                </li>
                <li class="menu_item has-children">
                    <a href="#">
                        English
                        <i class="fa fa-angle-down"></i>
                    </a>
                    <ul class="menu_selection">
                        <li><a href="#">French</a></li>
                        <li><a href="#">Italian</a></li>
                        <li><a href="#">German</a></li>
                        <li><a href="#">Spanish</a></li>
                    </ul>
                </li>
                <li class="menu_item"><a asp-area="" asp-controller="Home" asp-action="Index">Trang Chủ</a></li>
                <li class="menu_item"><a asp-area="" asp-controller="Product" asp-action="Index">Sản Phẩm</a></li>
                <li class="menu_item"><a href="#">Khuyến Mãi</a></li>
                <li class="menu_item"><a href="#">Cửa Hàng</a></li>
                <li class="menu_item"><a asp-area="" asp-controller="Posts" asp-action="Index">Bài Viết</a></li>
                <li class="menu_item"><a asp-area="" asp-controller="Contact" asp-action="Index">Liên Hệ</a></li>
                <li class="menu_item has-children account-dd">
                    <a href="#" class="account-toggle" aria-expanded="false" aria-haspopup="true">
                        Tài Khoản <i class="fa fa-angle-down ms-1"></i>
                    </a>

                    <ul class="menu_selection" role="menu" aria-label="Tài khoản">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li role="none">
                                <a role="menuitem" asp-controller="Account" asp-action="Login">
                                    <i class="fa fa-sign-in me-2" aria-hidden="true"></i>Đăng Nhập
                                </a>
                            </li>
                        }
                        else
                        {
                            <li role="none">
                                <a role="menuitem" asp-controller="Profile" asp-action="Index">
                                    <i class="fa fa-user-o me-2" aria-hidden="true"></i>Hồ sơ
                                </a>
                            </li>
                            <li role="none">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="m-0 p-0">
                                    <button type="submit" class="btn btn-sm btn-outline-dark w-100 fw-bold" role="menuitem">
                                        <i class="fa fa-sign-out me-2" aria-hidden="true"></i>Đăng xuất
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
                </li>
            </ul>
        </div>
    </div>



    <main role="main" class="flex-grow-1 mb-5">
        @RenderBody()
    </main>



    @if (IsSectionDefined("Footer"))
    {
        @RenderSection("Footer")
    }
    else
    {
        <footer class="site-footer">
            <div class="container">
                <div class="row g-4">
                    <div class="col-lg-3 col-md-6">
                        <h5>Về Old Sailor</h5>
                        <p class="footer-text">PNT SHOP – Thời trang World.</p>
                        <div class="d-flex gap-3">
                            <a href="#"><i class="fa fa-facebook-square"></i></a>
                            <a href="#"><i class="fa fa-instagram"></i></a>
                            <a href="#"><i class="fa fa-youtube-play"></i></a>
                            <a href="#"><i class="fa fa-tiktok"></i></a>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h5>Liên hệ hợp tác</h5>
                        <ul class="footer-list">
                            <li><strong>Địa chỉ:</strong> 26/20B/9 Lê Văn Duyệt, Bình Thạnh, HCM</li>
                            <li><strong>Điện thoại:</strong> 0936 611 611</li>
                            <li><strong>Email:</strong> hienpham@oldsailor.com.vn</li>
                        </ul>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h5>Hỗ trợ – chính sách</h5>
                        <ul class="footer-list">
                            <li><a href="#">Giới thiệu</a></li>
                            <li><a href="#">Liên hệ</a></li>
                            <li><a href="#">Hệ thống cửa hàng</a></li>
                            <li><a href="#">Thanh toán</a></li>
                            <li><a href="#">Giao hàng</a></li>
                            <li><a href="#">Đổi trả</a></li>
                            <li><a href="#">Bảo mật</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h5>Đăng ký nhận tin</h5>
                        <form class="footer-subscribe" action="#">
                            <input type="email" placeholder="Nhập email của bạn" required />
                            <button class="btn btn-dark w-100" type="submit">Đăng ký</button>
                        </form>
                    </div>
                </div>
                <div class="copyright text-center">© @DateTime.Now.Year OLD SAILOR. Powered by PNT.</div>
            </div>
        </footer>
    }
    

    <!-- Bootstrap 5 JS bundle (có Popper) - CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    <!-- JS chung -->
    <script src="~/js/site.js"></script>

    <script>
        async function refreshCartCount() {
          try {
            const res = await fetch('/Cart/Count', { headers: { 'X-Requested-With': 'XMLHttpRequest' } });
            if (!res.ok) return;
            const data = await res.json();
            const el = document.getElementById('cart-count');
            if (el) el.textContent = data.count ?? 0;
          } catch (_) { /* ignore */ }
        }

        // Cập nhật khi bạn đã thay đổi số lượng/tổng (cart.js có dispatch sự kiện này)
        document.addEventListener('cart:totals-updated', refreshCartCount);

        // Optional: cập nhật sau khi trang tải xong (đảm bảo đúng số lượng)
        document.addEventListener('DOMContentLoaded', refreshCartCount);
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
