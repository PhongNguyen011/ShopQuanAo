@model IEnumerable<ShopQuanAo.Models.Product>
@{
    ViewData["Title"] = "Sản Phẩm";
    var selectedCategory = ViewBag.SelectedCategory as string;

    // Tạo list có index để giữ thứ tự ban đầu
    var productsWithIndex = Model
        .Select((p, idx) => new
        {
            Product = p,
            Index = idx
        })
        .ToList();
}


@section Styles {
    <link href="~/bootstrap4/bootstrap.min.css">
    <link href="~/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/plugins/OwlCarousel2-2.2.1/owl.carousel.css" rel="stylesheet">
    <link href="~/plugins/OwlCarousel2-2.2.1/owl.theme.default.css" rel="stylesheet">
    <link href="~/plugins/OwlCarousel2-2.2.1/animate.css" rel="stylesheet">
    <link href="~/css/responsive.css" rel="stylesheet">
    <link href="~/css/main_styles.css" rel="stylesheet">
    <link href="~/css/categories_styles.css" rel="stylesheet">
    <link href="~/css/categories_responsive.css" rel="stylesheet">
}



<div class="container">
    <div class="row">
        <div class="col product_section clearfix">
            <!-- Breadcrumbs -->
            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Trang Chủ</a></li>
                    <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i> @ViewData["Title"]</a></li>
                </ul>
            </div>

            <!-- Sidebar -->
            <div class="sidebar">
                <div class="sidebar_section">
                    <div class="sidebar_title">
                        <h5>Danh Mục</h5>
                    </div>
                    <ul class="sidebar_categories">
                        <li class="@(string.IsNullOrEmpty(selectedCategory) ? "active" : "")">
                            <a asp-action="Index">Tất Cả</a>
                        </li>
                        <li class="@(selectedCategory == "men" ? "active" : "")">
                            <a asp-action="Index" asp-route-category="men">Nam</a>
                        </li>
                        <li class="@(selectedCategory == "women" ? "active" : "")">
                            <a asp-action="Index" asp-route-category="women">Nữ</a>
                        </li>
                        <li class="@(selectedCategory == "accessories" ? "active" : "")">
                            <a asp-action="Index" asp-route-category="accessories">Phụ Kiện</a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Main Content -->
            <div class="main_content">
                <!-- Products -->
                <div class="products_iso">
                    <div class="row">
                        <div class="col">
                            <!-- Product Sorting -->
                            <div class="product_sorting_container product_sorting_container_top">
                                <ul class="product_sorting">
                                    <li class="sorting-group">
                                        <span class="sort-label">
                                            Sắp Xếp Theo - (<span class="current_sort_value" id="currentSortText">Mặc Định</span>)
                                        </span>
                                        <i class="fa fa-angle-down"></i>

                                        <ul class="sorting_type">
                                            <li class="type_sorting_btn active-sort text-start"
                                                data-sortby="original"
                                                data-sorttext=" Mặc Định">
                                                <span>Mặc Định</span>
                                            </li>
                                            <li class="type_sorting_btn text-start"
                                                data-sortby="price"
                                                data-sortasc="true"
                                                data-sorttext=" Giá: Thấp → Cao">
                                                <span>Giá: Thấp → Cao</span>
                                            </li>
                                            <li class="type_sorting_btn text-start"
                                                data-sortby="price"
                                                data-sortasc="false"
                                                data-sorttext=" Giá: Cao → Thấp">
                                                <span>Giá: Cao → Thấp</span>
                                            </li>
                                            <li class="type_sorting_btn text-start"
                                                data-sortby="name"
                                                data-sorttext=" Tên">
                                                <span>Tên</span>
                                            </li>
                                        </ul>
                                    </li>

                                    <li class="ms-3">
                                        <div class="paging-toolbar">
                                            <span class="fw-semibold">Tổng SP:</span>
                                            <strong id="totalCount">@Model.Count()</strong>

                                            <span class="ms-2 fw-semibold">SP/trang:</span>
                                            <select id="quickSize" class="form-select form-select-sm d-inline-block w-auto">
                                                <option value="" selected>Chọn</option>
                                                <option value="4">4</option>
                                                <option value="8">8</option>
                                                <option value="12">12</option>
                                            </select>

                                        </div>
                                    </li>
                                </ul>
                            </div>

                            <!-- Product Grid -->
                            <div class="product-grid">
                                @if (Model.Any())
                                {
                                    @foreach (var product in Model)
                                    {
                                        <div class="product-item @product.Category">
                                            <div class="product @(product.IsOnSale ? "discount" : "")" data-product-id="@product.Id">
                                                <div class="product_image">
                                                    <img src="@Url.Content(product.ImageUrl ?? "~/images/product_1.png")" alt="@product.Name" style="height:240px">
                                                </div>
                                                
                                                @if (product.IsOnSale && product.OldPrice.HasValue)
                                                {
                                                    var discount = ((product.OldPrice.Value - product.Price) / product.OldPrice.Value * 100);
                                                    <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center">
                                                        <span>-@discount.ToString("0")%</span>
                                                    </div>
                                                }
                                                else if (product.IsFeatured)
                                                {
                                                    <div class="product_bubble product_bubble_left product_bubble_green d-flex flex-column align-items-center">
                                                        <span>new</span>
                                                    </div>
                                                }
                                                <div class="product_info">
                                                    <h6 class="product_name">
                                                        <a asp-action="Detail" asp-route-id="@product.Id">@product.Name</a>
                                                    </h6>
                                                    <div class="product_price">
                                                        @product.Price.ToString("N0")đ
                                                        @if (product.OldPrice.HasValue)
                                                        {
                                                            <span>@product.OldPrice.Value.ToString("N0")đ</span>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="red_button add_to_cart_button"><a asp-controller="Cart" asp-action="Add" asp-route-Id="@product.Id">Thêm Vào Giỏ</a></div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="col-12 text-center py-5">
                                        <h4>Không tìm thấy sản phẩm nào</h4>
                                        <p>Vui lòng thử lại sau hoặc chọn danh mục khác.</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="pagination-bar my-4 d-flex justify-content-center">
                    <div class="d-flex justify-content-center align-items-center gap-1 flex-wrap">
                        <button class="btn btn-outline-secondary" id="btnFirst" title="Trang đầu">«</button>
                        <button class="btn btn-outline-secondary" id="btnPrev" title="Trang trước">‹</button>

                        <div class="page-nums" id="pageNums"></div>

                        <button class="btn btn-outline-secondary" id="btnNext" title="Trang sau">›</button>
                        <button class="btn btn-outline-secondary" id="btnLast" title="Trang cuối">»</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/styles/bootstrap4/popper.js"></script>
    <script src="~/styles/bootstrap4/bootstrap.min.js"></script>
    <script src="~/plugins/Isotope/isotope.pkgd.min.js"></script>
    <script src="~/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
    <script src="~/plugins/easing/easing.js"></script>
    <script src="~/js/custom.js"></script>
    <script src="~/js/sale.js"></script>

    <!-- Khởi tạo filter & carousel (nếu custom.js chưa làm) -->
    <script>
        // Đổi pageSize (SP/trang)
        $(function () {
            $('#quickSize').on('change', function () {
                var size = $(this).val();
                var url = new URL(window.location.href);

                if (size) {
                    url.searchParams.set('pageSize', size);
                } else {
                    url.searchParams.delete('pageSize');
                }
                url.searchParams.set('page', 1); // luôn quay về trang 1
                window.location.href = url.toString();
            });

            // Click sắp xếp → gọi lại server với sortBy, sortAsc
            $('.type_sorting_btn').on('click', function () {
                var sortBy = $(this).data('sortby');
                var sortAsc = $(this).data('sortasc');
                var sortText = $(this).data('sorttext');

                var url = new URL(window.location.href);

                if (sortBy) {
                    url.searchParams.set('sortBy', sortBy);
                    if (typeof sortAsc !== 'undefined') {
                        url.searchParams.set('sortAsc', sortAsc);
                    }
                } else {
                    // Mặc định
                    url.searchParams.delete('sortBy');
                    url.searchParams.delete('sortAsc');
                }

                url.searchParams.set('page', 1); // sắp xếp thì quay về trang 1
                window.location.href = url.toString();
            });
        });
    </script>
}


