@model ShopQuanAo.Models.ViewModels.ChangePasswordViewModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<ShopQuanAo.Models.ApplicationUser> UserManager

@{
    ViewData["Title"] = "Đổi mật khẩu";

    ShopQuanAo.Models.ApplicationUser? currentUser = null;
    if (User.Identity?.IsAuthenticated ?? false)
    {
        currentUser = await UserManager.GetUserAsync(User);
    }

    string avatar = (currentUser != null && !string.IsNullOrEmpty(currentUser.AvatarFileName))
        ? Url.Content($"~/images/account/{currentUser.AvatarFileName}")
        : Url.Content("~/images/account/_default.png");
}

<div class="container">

    <!-- Breadcrumbs -->
    <div class="breadcrumbs d-flex flex-row align-items-center">
        <ul>
            <li>
                <a asp-area="" asp-controller="Home" asp-action="Index">Trang Chủ</a>
            </li>
            <li class="active">
                <a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i> Tài khoản</a>
            </li>
            <li class="active">
                <a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i> @ViewData["Title"]</a>
            </li>
        </ul>
    </div>

    @* Thông báo chung (ví dụ đổi mật khẩu thành công, lỗi hệ thống) *@
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="row g-4">
        <!-- Cột trái: avatar + menu điều hướng -->
        <div class="col-md-3">
            <div class="card shadow-sm border border-2">
                <div class="card-body">
                    <div class="text-center mb-3">
                        <img src="@avatar"
                             class="rounded-circle border"
                             style="width:140px;height:140px;object-fit:cover;" />
                    </div>
                </div>
            </div>

            <div class="mt-2">
                <a asp-action="Index"
                   asp-controller="Profile"
                   class="btn btn-outline-info w-100 fw-bold">
                    Hồ sơ của tôi
                </a>
                <a asp-action="ChangePassword"
                   asp-controller="Profile"
                   class="btn btn-outline-info w-100 fw-bold mt-2">
                    Đổi mật khẩu
                </a>
                <a asp-action="MyOrders"
                   asp-controller="Profile"
                   class="btn btn-outline-info w-100 fw-bold mt-2">
                    Lịch sử đơn hàng
                </a>
            </div>
        </div>

        <!-- Cột phải: form đổi mật khẩu -->
        <div class="col-md-9">
            <div class="card shadow-sm border border-2">
                <span class="mt-3 ms-4 fw-bold fs-6">Đổi mật khẩu</span>
                <hr />
                <div class="card-body">

                    @* Thông báo lỗi tổng quát từ ModelState (ví dụ: mật khẩu cũ sai) *@
                    @if (!ViewData.ModelState.IsValid &&
                                        ViewData.ModelState[string.Empty] != null &&
                                        ViewData.ModelState[string.Empty].Errors.Count > 0)
                    {
                        <div class="alert alert-danger">
                            @foreach (var err in ViewData.ModelState[string.Empty].Errors)
                            {
                                <div>@err.ErrorMessage</div>
                            }
                        </div>
                    }

                    <form asp-action="ChangePassword"
                          asp-controller="Profile"
                          method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="OldPassword" class="form-label fw-semibold"></label>
                            <input asp-for="OldPassword"
                                   class="form-control"
                                   type="password"
                                   autocomplete="current-password" />
                            <span class="text-danger" asp-validation-for="OldPassword"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label fw-semibold"></label>
                            <input asp-for="NewPassword"
                                   class="form-control"
                                   type="password"
                                   autocomplete="new-password" />
                            <span class="text-danger" asp-validation-for="NewPassword"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label fw-semibold"></label>
                            <input asp-for="ConfirmPassword"
                                   class="form-control"
                                   type="password"
                                   autocomplete="new-password" />
                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>

                        <button type="submit"
                                class="btn btn-primary w-100 fw-bold">
                            Lưu mật khẩu mới
                        </button>

                        <a asp-action="Index"
                           asp-controller="Profile"
                           class="btn btn-outline-secondary w-100 fw-bold mt-2">
                            Hủy
                        </a>
                    </form>

                </div>
            </div>
        </div>
    </div>

</div>
