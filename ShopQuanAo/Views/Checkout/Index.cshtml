@model List<ShopQuanAo.Models.CartItem>
@using System.Globalization

@{
    ViewData["Title"] = "Thanh toán";
    var vn = CultureInfo.GetCultureInfo("vi-VN");

    decimal subtotal = ViewBag.Subtotal ?? (Model?.Sum(x => x.LineTotal) ?? 0M);
    decimal discount = ViewBag.Discount ?? 0M;
    decimal total = ViewBag.Total ?? (subtotal - discount);

    string VnMoney(decimal v) => string.Format(vn, "{0:N0} ₫", v);

    var appliedCoupon = ViewBag.AppliedCoupon as ShopQuanAo.Controllers.CheckoutController.AppliedCouponInfo;
    string allowedCats = "";
    if (appliedCoupon != null)
    {
        allowedCats = appliedCoupon.AllowedCategoriesCsv ?? "";
    }
}

<div class="container checkout-page">
    <!-- BREADCRUMB -->
    <div class="breadcrumbs d-flex flex-row align-items-center">
        <ul>
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Trang Chủ</a></li>
            <li class="me-2">
                <a asp-controller="Cart" asp-action="Index" class="text-decoration-none text-muted">
                    Giỏ hàng
                </a>
            </li>
            <li class="active">
                <a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i> @ViewData["Title"]</a>
            </li>
        </ul>
    </div>

    <div class="row g-4 g-lg-5">
        <!-- RIGHT COLUMN (order summary) -->
        <aside class="col-lg-5 order-lg-2">
            <div class="card border-1 shadow-sm summary-card">
                <div class="card-header bg-white border-0 border-bottom">
                    <h6 class="mb-0 d-flex align-items-center gap-1 text-uppercase small fw-bold text-secondary">
                        <i class="fa fa-cube text-secondary"></i>
                        Đơn hàng
                    </h6>
                </div>

                <div class="card-body pb-0">
                    <!-- DANH SÁCH SẢN PHẨM -->
                    <ul class="list-group list-group-flush">
                        @foreach (var item in Model ?? new List<ShopQuanAo.Models.CartItem>())
                        {
                            <li class="list-group-item px-0">
                                <div class="d-flex align-items-start">
                                    <!-- ẢNH SẢN PHẨM -->
                                    <div class="me-3 flex-shrink-0 rounded border" style="width:64px;height:64px;overflow:hidden;">
                                        <img src="@Url.Content(item.Image ?? "~/images/product_1.png")"
                                             alt="@item.Name"
                                             class="w-100 h-100 object-fit-cover" />
                                    </div>

                                    <!-- THÔNG TIN -->
                                    <div class="flex-grow-1">
                                        <div class="d-flex justify-content-between">
                                            <div class="pe-2">
                                                <div class="fw-semibold small lh-sm">@item.Name</div>
                                                <div class="text-muted small">SL: @item.Quantity</div>
                                            </div>
                                            <div class="text-end">
                                                <div class="fw-semibold small">@VnMoney(item.LineTotal)</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>

                    <hr />

                    <!-- TỔNG KẾT TIỀN HÀNG -->
                    <div class="d-flex justify-content-between small mb-2">
                        <span class="text-muted">Tạm tính</span>
                        <span id="ck-subtotal" class="fw-semibold">@VnMoney(subtotal)</span>
                    </div>

                    <div class="d-flex justify-content-between small mb-2">
                        <span class="text-muted">Giảm</span>
                        <span id="ck-discount" class="text-success fw-semibold">-@VnMoney(discount)</span>
                    </div>

                    <div class="d-flex justify-content-between small">
                        <span class="text-muted">Phí giao hàng</span>
                        <span id="ck-shipping" class="fw-semibold">Đang tính...</span>
                    </div>

                    <div id="ck-shipping-msg"
                         class="text-success small mt-1"
                         style="display:none"></div>
                </div>

                <!-- TỔNG CỘNG -->
                <div class="card-footer bg-white border-0 border-top mt-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="fw-semibold">Tổng cộng</span>
                        <span id="ck-grandtotal" class="fw-bold fs-4 text-dark">@VnMoney(total)</span>
                    </div>
                    <div class="text-muted small mt-1">
                        Đã bao gồm khuyến mãi, chưa gồm phí ship (nếu có).
                    </div>
                </div>
            </div>
        </aside>

        <!-- LEFT COLUMN -->
        <section class="col-lg-7 order-lg-1">
            <!-- COUPON -->
            <div class="card border-1 shadow-sm mb-4">
                <div class="card-header bg-white border-0 border-bottom pb-2">
                    <h6 class="mb-0 d-flex align-items-center gap-1 text-uppercase small fw-bold text-secondary">
                        <i class="fa fa-ticket"></i>
                        Mã giảm giá
                    </h6>
                </div>

                <div class="card-body">
                    @if (appliedCoupon == null)
                    {
                        <form asp-action="ApplyCoupon" method="post" class="coupon-form">
                            @Html.AntiForgeryToken()
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="fa fa-tag"></i></span>
                                <input type="text"
                                       name="code"
                                       class="form-control coupon-input text-uppercase fw-semibold"
                                       placeholder="NHẬP MÃ (VD: SALE10)"
                                       autocomplete="off" />
                                <button class="btn btn-dark fw-semibold">Áp dụng</button>
                            </div>
                            <div class="form-text mt-2 small text-muted">
                                Bạn có thể nhập nhiều mã, cách nhau bằng dấu phẩy. Hệ thống sẽ chọn mã tốt nhất.
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-2">
                            <div class="d-flex align-items-center gap-2 flex-wrap">
                                <span class="badge rounded-pill bg-success px-3 py-2 text-white">
                                    <i class="fa fa-check-circle me-1"></i> Đã áp dụng
                                </span>
                                <span class="code-chip">@appliedCoupon.Code</span>
                                <span class="text-muted small">
                                    — @(
                                        appliedCoupon.DiscountType == ShopQuanAo.Models.DiscountType.Percentage
                                            ? $"Giảm {appliedCoupon.DiscountValue}%"
                                            : $"Giảm {VnMoney((decimal)appliedCoupon.DiscountValue)}"
                                      )
                                </span>
                            </div>

                            <form asp-action="RemoveCoupon" method="post" class="m-0">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-outline-danger btn-sm fw-semibold" type="submit">
                                    <i class="fa fa-times me-1"></i> Bỏ mã
                                </button>
                            </form>
                        </div>

                        <div class="mt-3 small text-muted lh-lg bg-light rounded p-2 border">
                            @if (appliedCoupon.MinOrderAmount != null)
                            {
                                <div>
                                    • Đơn tối thiểu:
                                    <strong>@VnMoney((decimal)appliedCoupon.MinOrderAmount)</strong>
                                </div>
                            }
                            @if (appliedCoupon.Scope == ShopQuanAo.Models.CouponScope.CategoryOnly && !string.IsNullOrWhiteSpace(allowedCats))
                            {
                                <div>
                                    • Phạm vi: chỉ áp dụng cho
                                    <strong>@allowedCats</strong>
                                </div>
                            }
                            <div>
                                • Trạng thái:
                                <span class="fw-semibold @(appliedCoupon.IsActive ? "text-success" : "text-danger")">
                                    @(appliedCoupon.IsActive ? "Đang kích hoạt" : "Đã tắt")
                                </span>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- THÔNG TIN GIAO HÀNG + THANH TOÁN -->
            <div class="card border-1 shadow-sm">
                <div class="card-header bg-white border-0 border-bottom pb-2">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center">
                        <div>
                            <div class="text-uppercase small fw-bold text-secondary">
                                1. Thông tin giao hàng
                            </div>
                            <div class="small text-muted">Điền địa chỉ để tính phí vận chuyển</div>
                        </div>
                        <div class="small text-muted mt-2 mt-md-0">
                            <i class="fa fa-lock me-1"></i>Thông tin của bạn được bảo mật
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <form asp-action="Pay" method="post" id="checkout-form">
                        @Html.AntiForgeryToken()

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label small text-muted fw-semibold">Họ và tên</label>
                                <input class="form-control" name="CustomerName" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label small text-muted fw-semibold">Số điện thoại</label>
                                <input class="form-control" name="Phone" required />
                            </div>

                            <div class="col-12 col-md-4">
                                <label class="form-label small text-muted fw-semibold">Tỉnh/Thành phố</label>
                                <select id="province-select" class="form-select" required>
                                    <option value="">-- Chọn tỉnh/thành phố --</option>
                                </select>
                                <input type="hidden" id="ProvinceName" name="ProvinceName" />
                            </div>

                            <div class="col-12 col-md-4">
                                <label class="form-label small text-muted fw-semibold">Quận/Huyện</label>
                                <select id="district-select" class="form-select" required disabled>
                                    <option value="">-- Chọn quận/huyện --</option>
                                </select>
                                <input type="hidden" id="DistrictName" name="DistrictName" />
                            </div>

                            <div class="col-12 col-md-4">
                                <label class="form-label small text-muted fw-semibold">Phường/Xã</label>
                                <select id="ward-select" class="form-select" required disabled>
                                    <option value="">-- Chọn phường/xã --</option>
                                </select>
                                <input type="hidden" id="WardName" name="WardName" />
                            </div>

                            <div class="col-12">
                                <label class="form-label small text-muted fw-semibold">Số nhà, tên đường...</label>
                                <input class="form-control" id="address-input"
                                       name="AddressDetail"
                                       placeholder="VD: 12/3 Nguyễn Văn A"
                                       autocomplete="off"
                                       required />
                            </div>

                            <div class="col-12">
                                <label class="form-label small text-muted fw-semibold">Ghi chú</label>
                                <textarea class="form-control" name="Note" rows="2"
                                          placeholder="Giao giờ hành chính, gọi trước khi đến..."></textarea>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="mb-2">
                            <div class="text-uppercase small fw-bold text-secondary">
                                2. Phương thức thanh toán
                            </div>
                        </div>

                        <div class="list-group payment-method-list">
                            <label class="list-group-item d-flex align-items-start gap-3">
                                <input class="form-check-input mt-1"
                                       type="radio"
                                       name="PaymentMethod"
                                       value="COD"
                                       checked />
                                <div class="flex-grow-1 d-flex flex-wrap align-items-center">
                                    <span class="fw-semibold me-1">Thanh toán khi nhận hàng (COD)</span>
                                    <small class="text-muted">(Thu tiền mặt khi giao hàng)</small>
                                </div>
                            </label>

                            <label class="list-group-item d-flex align-items-start gap-3">
                                <input class="form-check-input mt-1"
                                       type="radio"
                                       name="PaymentMethod"
                                       value="VNPAY" />
                                <div class="flex-grow-1 d-flex flex-wrap align-items-center">
                                    <span class="fw-semibold me-1">VNPay</span>
                                    <small class="text-muted">(Thẻ nội địa / QR / Internet Banking)</small>
                                </div>
                            </label>

                            <label class="list-group-item d-flex align-items-start gap-3">
                                <input class="form-check-input mt-1"
                                       type="radio"
                                       name="PaymentMethod"
                                       value="MOMO" />
                                <div class="flex-grow-1 d-flex flex-wrap align-items-center">
                                    <span class="fw-semibold me-1">MoMo</span>
                                    <small class="text-muted">(Ví điện tử, quét QR nhanh chóng)</small>
                                </div>
                            </label>
                        </div>

                        <hr class="my-3">

                        <div class="d-flex mt-2">
                            <button class="btn btn-dark btn-lg fw-semibold shadow-sm w-100"
                                    type="submit"
                                    form="checkout-form">
                                Xác nhận &amp; Thanh toán
                            </button>
                        </div>

                        <input type="hidden" id="ShippingFee" name="ShippingFee" value="0" />
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>

<style>
    .coupon-input {
        letter-spacing: .5px;
    }

    .code-chip {
        display: inline-flex;
        align-items: center;
        padding: .25rem .6rem;
        border: 1px dashed #ced4da;
        border-radius: 999px;
        font-weight: 600;
        background: #f8f9fa;
        font-size: .8rem;
    }

    .coupon-form .input-group .form-control:focus {
        box-shadow: none;
        border-color: #343a40;
    }

    .object-fit-cover {
        object-fit: cover;
    }

    .summary-card .list-group-item {
        border: 0;
        border-bottom: 1px solid #f1f1f1;
    }

        .summary-card .list-group-item:last-child {
            border-bottom: 0;
        }

    .payment-method-list .list-group-item {
        border: 1px solid #dee2e6;
        border-radius: .5rem;
        margin-bottom: .5rem;
        cursor: pointer;
        transition: all .15s ease;
    }

        .payment-method-list .list-group-item:last-child {
            margin-bottom: 0;
        }

        .payment-method-list .list-group-item:hover {
            background-color: #f8f9fa;
            border-color: #adb5bd;
        }

        .payment-method-list .list-group-item input[type="radio"]:checked + div .fw-semibold {
            color: #000;
        }

    @@media (max-width: 991.98px) {
        .summary-card {
        }
    }
</style>

@section Scripts {
    <script>
        const API_HOST = "https://provinces.open-api.vn/api/v1/";

        var subtotal = Number('@subtotal');
        var discount = Number('@discount');
        var total = Number('@total');
        var freeShipThreshold = 500000;
        var shippingFee = 0;

        const $provinceSelect = document.getElementById('province-select');
        const $districtSelect = document.getElementById('district-select');
        const $wardSelect = document.getElementById('ward-select');
        const $provinceNameInput = document.getElementById('ProvinceName');
        const $districtNameInput = document.getElementById('DistrictName');
        const $wardNameInput = document.getElementById('WardName');
        const $ckShipping = document.getElementById('ck-shipping');
        const $ckShippingMsg = document.getElementById('ck-shipping-msg');
        const $grand = document.getElementById('ck-grandtotal');
        const $shippingFeeInput = document.getElementById('ShippingFee');

        // ========== LOAD PROVINCES (API thật) ==========
        async function loadProvinces() {
            try {
                $provinceSelect.innerHTML = '<option value="">-- Đang tải... --</option>';
                const res = await fetch(API_HOST + '?depth=1');
                if (!res.ok) throw new Error('HTTP ' + res.status);
                const provinces = await res.json();

                $provinceSelect.innerHTML = '<option value="">-- Chọn tỉnh/thành phố --</option>';

                provinces.forEach(p => {
                    const opt = document.createElement('option');
                    opt.value = p.code;        // mã tỉnh
                    opt.textContent = p.name;  // tên tỉnh
                    opt.dataset.name = p.name;
                    $provinceSelect.appendChild(opt);
                });
            } catch (err) {
                console.error('Error loading provinces:', err);
                $provinceSelect.innerHTML = '<option value="">-- Lỗi tải dữ liệu --</option>';
            }
        }

        // ========== LOAD DISTRICTS ==========
        $provinceSelect.addEventListener('change', async function () {
            const provinceCode = this.value;
            const selectedOption = this.options[this.selectedIndex];
            const provinceName = selectedOption ? selectedOption.dataset.name || selectedOption.textContent : '';

            $provinceNameInput.value = provinceName;
            $districtSelect.innerHTML = '<option value="">-- Chọn quận/huyện --</option>';
            $wardSelect.innerHTML = '<option value="">-- Chọn phường/xã --</option>';
            $districtSelect.disabled = !provinceCode;
            $wardSelect.disabled = true;
            $districtNameInput.value = '';
            $wardNameInput.value = '';
            shippingFee = 0;
            updateGrandTotal();

            if (!provinceCode) return;

            try {
                // /p/{code}?depth=2 -> province + districts
                const res = await fetch(`${API_HOST}p/${provinceCode}?depth=2`);
                if (!res.ok) throw new Error('HTTP ' + res.status);
                const province = await res.json();
                const districts = province.districts || [];

                $districtSelect.innerHTML = '<option value="">-- Chọn quận/huyện --</option>';
                districts.forEach(d => {
                    const opt = document.createElement('option');
                    opt.value = d.code;
                    opt.textContent = d.name;
                    opt.dataset.name = d.name;
                    $districtSelect.appendChild(opt);
                });
                $districtSelect.disabled = false;
            } catch (err) {
                console.error('Error loading districts:', err);
                $districtSelect.innerHTML = '<option value="">-- Lỗi tải dữ liệu --</option>';
            }
        });

        // ========== LOAD WARDS ==========
        $districtSelect.addEventListener('change', async function () {
            const districtCode = this.value;
            const selectedOption = this.options[this.selectedIndex];
            const districtName = selectedOption ? selectedOption.dataset.name || selectedOption.textContent : '';

            $districtNameInput.value = districtName;
            $wardSelect.innerHTML = '<option value="">-- Chọn phường/xã --</option>';
            $wardSelect.disabled = !districtCode;
            $wardNameInput.value = '';
            shippingFee = 0;
            updateGrandTotal();

            if (!districtCode) return;

            try {
                // /d/{code}?depth=2 -> district + wards
                const res = await fetch(`${API_HOST}d/${districtCode}?depth=2`);
                if (!res.ok) throw new Error('HTTP ' + res.status);
                const district = await res.json();
                const wards = district.wards || [];

                $wardSelect.innerHTML = '<option value="">-- Chọn phường/xã --</option>';
                wards.forEach(w => {
                    const opt = document.createElement('option');
                    opt.value = w.code;
                    opt.textContent = w.name;
                    opt.dataset.name = w.name;
                    $wardSelect.appendChild(opt);
                });
                $wardSelect.disabled = false;
            } catch (err) {
                console.error('Error loading wards:', err);
                $wardSelect.innerHTML = '<option value="">-- Lỗi tải dữ liệu --</option>';
            }
        });

        // ========== WARD CHANGE → TÍNH PHÍ SHIP ==========
        $wardSelect.addEventListener('change', function () {
            const selectedOption = this.options[this.selectedIndex];
            const wardName = selectedOption ? selectedOption.dataset.name || selectedOption.textContent : '';
            $wardNameInput.value = wardName;
            fetchShippingFee();
        });

        // ========== CẬP NHẬT TỔNG TIỀN ==========
        function updateGrandTotal() {
            let grandTotal = total;

            if (shippingFee > 0 && total < freeShipThreshold) {
                grandTotal += shippingFee;
                $ckShippingMsg.style.display = 'none';
            }

            if (total >= freeShipThreshold) {
                $ckShippingMsg.textContent = 'Đơn hàng trên 500.000đ - Miễn phí ship!';
                $ckShippingMsg.style.display = 'block';
                $ckShippingMsg.className = 'text-success small mt-1';
                $ckShipping.textContent = 'Miễn phí';
                shippingFee = 0;
                grandTotal = total;
            } else {
                $ckShippingMsg.style.display = 'none';
                $ckShipping.textContent = shippingFee > 0
                    ? shippingFee.toLocaleString('vi-VN') + ' ₫'
                    : 'Đang tính...';
            }

            $grand.textContent = grandTotal.toLocaleString('vi-VN') + ' ₫';
            $shippingFeeInput.value = shippingFee || 0;
        }

        // ========== GỌI BACKEND TÍNH PHÍ SHIP ==========
        async function fetchShippingFee() {
            const provinceName = $provinceNameInput.value;
            const districtName = $districtNameInput.value;
            const wardName = $wardNameInput.value;

            if (!provinceName || !districtName || !wardName) {
                $ckShipping.textContent = 'Đang tính...';
                shippingFee = 0;
                updateGrandTotal();
                return;
            }

            $ckShipping.textContent = 'Đang tính...';

            try {
                const data = {
                    provinceName: provinceName,
                    districtName: districtName,
                    wardName: wardName,
                    addressDetail: document.querySelector('input[name="AddressDetail"]')?.value || ''
                };

                const res = await fetch('/Checkout/CalcShipFee', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                const js = await res.json();
                if (js.ok && js.shipFee && js.shipFee > 0) {
                    shippingFee = js.shipFee;
                    $ckShippingMsg.style.display = 'none';
                } else {
                    shippingFee = 0;
                    $ckShippingMsg.textContent = js.message || 'Không tính được phí ship!';
                    $ckShippingMsg.className = 'text-danger small mt-1';
                    $ckShippingMsg.style.display = 'block';
                }
            } catch (err) {
                console.error(err);
                shippingFee = 0;
                $ckShippingMsg.textContent = 'Không kết nối được máy chủ phí ship. Vui lòng thử lại hoặc báo admin!';
                $ckShippingMsg.className = 'text-danger small mt-1';
                $ckShippingMsg.style.display = 'block';
            }

            updateGrandTotal();
        }

        // ========== INIT ==========
        document.addEventListener('DOMContentLoaded', function () {
            loadProvinces();
            updateGrandTotal();
        });
    </script>
}
