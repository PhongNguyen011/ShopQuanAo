@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Quản Lý Vai Trò";
}

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                <h6>Danh Sách Vai Trò</h6>
                <a asp-action="Create" class="btn btn-primary btn-sm">
                    <i class="fa fa-plus"></i> Tạo Vai Trò Mới
                </a>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Tên Vai Trò</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">ID</th>
                                <th class="text-secondary opacity-7">Thao Tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@role.Name</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="text-xs text-secondary mb-0">@role.Id</p>
                                    </td>
                                    <td>
                                        @if (role.Name != "Admin" && role.Name != "User")
                                        {
                                            <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger btn-sm" title="Xóa vai trò">
                                                <i class="fa fa-trash"></i> Xóa
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="badge badge-sm bg-gradient-secondary">Vai trò hệ thống</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



