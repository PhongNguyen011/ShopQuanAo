@model ShopQuanAo.Models.Coupon
@using System.Globalization
@{
    ViewData["Title"] = "Quản Lý Mã Giảm Giá";
    ViewData["Card"] = "Xoá Mã Giảm Giá";
    var vn = CultureInfo.GetCultureInfo("vi-VN");
    string VnMoney(decimal v) => string.Format(vn, "{0:N0} ₫", v);
}

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0">
                <h6 class="text-danger">@ViewData["Card"]</h6>
            </div>

            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <strong>Cảnh báo!</strong> Bạn có chắc muốn xoá mã: <strong>@Model.Code</strong>?
                </div>

                <div class="card mb-3">
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-3">Loại giảm</dt>
                            <dd class="col-sm-9">
                                @(Model.DiscountType == ShopQuanAo.Models.DiscountType.Percentage
                                                                ? $"Giảm {Model.DiscountValue}%"
                                                                : $"Giảm {VnMoney(Model.DiscountValue)}")
                            </dd>

                            <dt class="col-sm-3">Đơn tối thiểu</dt>
                            <dd class="col-sm-9">
                                @(Model.MinOrderAmount.HasValue? VnMoney(Model.MinOrderAmount.Value) : "-")
                            </dd>

                            <dt class="col-sm-3">Hiệu lực</dt>
                            <dd class="col-sm-9">
                                @Model.StartDate.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                -
                                @(Model.EndDate?.ToLocalTime().ToString("dd/MM/yyyy HH:mm") ?? "∞")
                            </dd>

                            <dt class="col-sm-3">Phạm vi</dt>
                            <dd class="col-sm-9">
                                @Model.Scope
                                @if (Model.Scope == ShopQuanAo.Models.CouponScope.CategoryOnly && !string.IsNullOrWhiteSpace(Model.AllowedCategoriesCsv))
                                {
                                    <div class="text-muted small">Danh mục áp dụng: @Model.AllowedCategoriesCsv</div>
                                }
                            </dd>

                            <dt class="col-sm-3">Trạng thái</dt>
                            <dd class="col-sm-9">
                                @(Model.IsActive ? "Đang kích hoạt" : "Đã tắt")
                            </dd>

                            <dt class="col-sm-3">Tạo / Cập nhật</dt>
                            <dd class="col-sm-9">
                                @Model.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                @if (Model.UpdatedAt.HasValue)
                                {
                                    <span class="text-muted">| Sửa: @Model.UpdatedAt.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>

                @* Nếu controller POST tên action là DeleteConfirmed, dùng DeleteConfirmed.
                   Nếu đang dùng POST Delete thì đổi asp-action="Delete". *@
                <form asp-action="DeleteConfirmed" method="post" class="mt-3">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <button class="btn btn-danger" type="submit">
                        <i class="fa fa-trash"></i> Xoá
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fa fa-arrow-left"></i> Huỷ
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
