@model ShopQuanAo.Models.Coupon

@{
    ViewData["Title"] = "Sửa mã giảm giá";
}

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0">
                <h6>Sửa Mã Giảm Giá: @Model.Code</h6>
            </div>

            <div class="card-body">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="row g-3">
                        <div class="col-md-3">
                            <label class="form-control-label">Code</label>
                            <input asp-for="Code" class="form-control" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label class="form-control-label">Loại</label>
                            <select asp-for="DiscountType" class="form-select"
                                    asp-items="Html.GetEnumSelectList<ShopQuanAo.Models.DiscountType>()"></select>
                        </div>

                        <div class="col-md-3">
                            <label class="form-control-label">Giá trị</label>
                            <input asp-for="DiscountValue" class="form-control" />
                            <span asp-validation-for="DiscountValue" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label class="form-control-label">Tối thiểu đơn</label>
                            <input asp-for="MinOrderAmount" class="form-control" />
                        </div>

                        <div class="col-md-3">
                            <label class="form-control-label">Bắt đầu (UTC)</label>
                            <input asp-for="StartDate" type="datetime-local" class="form-control"
                                   value="@(Model?.StartDate.ToString("yyyy-MM-ddTHH:mm") ?? String.Empty)" />
                        </div>

                        <div class="col-md-3">
                            <label class="form-control-label">Kết thúc (UTC)</label>
                            <input asp-for="EndDate" type="datetime-local" class="form-control"
                                   value="@(Model?.EndDate.HasValue == true ? Model.EndDate.Value.ToString("yyyy-MM-ddTHH:mm") : String.Empty)" />
                        </div>

                        <div class="col-md-3">
                            <label class="form-control-label">Scope</label>
                            <select asp-for="Scope" class="form-select"
                                    asp-items="Html.GetEnumSelectList<ShopQuanAo.Models.CouponScope>()"></select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-control-label">Danh mục áp dụng (CSV)</label>
                            <input asp-for="AllowedCategoriesCsv" class="form-control" placeholder="men,women" />
                        </div>

                        <div class="col-md-3 d-flex align-items-center">
                            <div class="form-check form-switch mt-3">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label class="form-check-label" asp-for="IsActive">Kích hoạt</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save"></i> Cập Nhật
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa fa-arrow-left"></i> Quay Lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
