@model IEnumerable<ShopQuanAo.Models.Coupon>
@using System.Globalization

@{
    ViewData["Title"] = "Mã giảm giá";
    var vn = CultureInfo.GetCultureInfo("vi-VN");
    string VnMoney(decimal v) => string.Format(vn, "{0:N0} ₫", v);
}

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                <h6>@ViewData["Title"]</h6>
                <a asp-action="Create" class="btn btn-primary btn-sm">
                    <i class="fa fa-plus"></i> Tạo mã
                </a>
            </div>

            <div class="card-body px-0 pt-0 pb-2">
                @if (TempData["ok"] != null)
                {
                    <div class="alert alert-success mx-3 mt-3">@TempData["ok"]</div>
                }

                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Code</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Loại</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Giá trị</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Tối thiểu</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Hiệu lực</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Phạm vi</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Trạng thái</th>
                                <th class="text-secondary opacity-7"></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var c in Model)
                            {
                                <tr>
                                    <!-- CODE -->
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@c.Code</h6>
                                                <p class="text-xs text-secondary mb-0">
                                                    @(c.DiscountType == ShopQuanAo.Models.DiscountType.Percentage
                                                                                                    ? $"Giảm {c.DiscountValue}%"
                                                                                                    : $"Giảm {VnMoney(c.DiscountValue)}")
                                                                                                                                     </p>
                                                                                                                                 </div>
                                                                                                                             </div>
                                                                                                                         </td>

                                    <!-- LOẠI -->
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">@c.DiscountType</p>
                                    </td>

                                    <!-- GIÁ TRỊ -->
                                    <td class="align-middle text-center text-sm">
                                        <p class="text-xs font-weight-bold mb-0">
                                            @(c.DiscountType == ShopQuanAo.Models.DiscountType.Percentage
                                                                                    ? $"{c.DiscountValue}%"
                                                                                    : VnMoney(c.DiscountValue))
                                    </p>
                                </td>

                                    <!-- TỐI THIỂU -->
                                    <td class="align-middle text-center">
                                        <span class="text-secondary text-xs font-weight-bold">
                                            @(c.MinOrderAmount.HasValue? VnMoney(c.MinOrderAmount.Value) : "-")
                                        </span>
                                    </td>

                                    <!-- HIỆU LỰC -->
                                    <td class="align-middle text-sm">
                                        <div class="text-xs">
                                            @c.StartDate.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                            -
                                            @(c.EndDate?.ToLocalTime().ToString("dd/MM/yyyy HH:mm") ?? "∞")
                                        </div>
                                    </td>

                                    <!-- PHẠM VI -->
                                    <td class="align-middle text-sm">
                                        <div class="text-xs">@c.Scope</div>
                                    @if (c.Scope == ShopQuanAo.Models.CouponScope.CategoryOnly &&
                                                                        !string.IsNullOrWhiteSpace(c.AllowedCategoriesCsv))
                                        {
                                            <div class="text-muted small">Danh mục: @c.AllowedCategoriesCsv</div>
                                        }
                                    </td>

                                    <!-- TRẠNG THÁI -->
                                    <td class="align-middle text-sm">
                                        @if (c.IsActive)
                                        {
                                            <span class="badge badge-sm bg-gradient-success">Đang bật</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-sm bg-gradient-secondary">Đã tắt</span>
                                        }

                                        <!-- Nút Toggle POST kiểu "link" để giống cụm action -->
                                        <form asp-action="Toggle" method="post" class="d-inline ms-2">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@c.Id" />
                                            <button type="submit" class="btn btn-link text-xs p-0 align-baseline">
                                                <i class="fa fa-exchange me-1"></i> Toggle
                                            </button>
                                        </form>
                                    </td>

                                    <!-- ACTIONS -->
                                    <td class="align-middle">
                                        
                                        <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-link text-dark px-2 mb-0" title="Sửa">
                                            <i class="fa fa-pencil text-dark me-2"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-link text-danger text-gradient px-2 mb-0" title="Xóa">
                                            <i class="fa fa-trash text-danger me-2"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @if (!(Model?.Any() ?? false))
                    {
                        <div class="p-3 text-center text-muted">Chưa có mã giảm giá nào.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
