@model IEnumerable<ShopQuanAo.Models.Post>
@{
    ViewData["Title"] = "Quản Lý Bài Viết";
}
<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                <h6>Danh Sách Bài Viết</h6>
                <a asp-action="Create" class="btn btn-primary btn-sm">
                    <i class="fa fa-plus"></i> Thêm Bài Viết
                </a>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th style="width:15%" class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Ảnh</th>
                                <th style="width:30%" class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Tiêu đề</th>
                                <th style="width:20%" class="text-uppercase text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Ngày tạo</th>
                                <th style="width:10%" class="text-uppercase text-secondary opacity-7"></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var p in Model)
                            {
                                <tr>
                                    <td style="width:90px">
                                        @if (!string.IsNullOrEmpty(p.Thumbnail))
                                        {
                                            <img src="~/images/posts/@p.Thumbnail" alt="@p.Title" style="width:70px;height:70px;object-fit:cover;border-radius:8px;" />
                                        }
                                    </td>
                                    <td>@p.Title</td>
                                    <td>@p.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="text-end">
                                        <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-info btn-sm">Chi tiết</a>
                                        <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-warning btn-sm">Sửa</a>
                                        <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-danger btn-sm">Xoá</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (!Model.Any())
                    {
                        <div class="p-3 text-center text-muted">Chưa có bài viết nào.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
