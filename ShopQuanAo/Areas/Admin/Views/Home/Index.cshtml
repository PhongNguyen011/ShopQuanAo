@{
    ViewData["Title"] = "Bảng Điều Khiển";
}

<div class="row">
    <div class="col-xl-3 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-8">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-uppercase font-weight-bold">Tổng Sản Phẩm</p>
                            <h5 class="font-weight-bolder">
                                @ViewBag.TotalProducts
                            </h5>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-primary shadow-primary text-center rounded-circle">
                            <i class="fa fa-shopping-bag text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-8">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-uppercase font-weight-bold">Sản Phẩm Đang Bán</p>
                            <h5 class="font-weight-bolder">
                                @ViewBag.ActiveProducts
                            </h5>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-success shadow-success text-center rounded-circle">
                            <i class="fa fa-check-circle text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-8">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-uppercase font-weight-bold">Sản Phẩm Nổi Bật</p>
                            <h5 class="font-weight-bolder">
                                @ViewBag.FeaturedProducts
                            </h5>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-warning shadow-warning text-center rounded-circle">
                            <i class="fa fa-star text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-8">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-uppercase font-weight-bold">Người Dùng</p>
                            <h5 class="font-weight-bolder">
                                @ViewBag.TotalUsers
                            </h5>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-info shadow-info text-center rounded-circle">
                            <i class="fa fa-users text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-lg-12 mb-lg-0 mb-4">
        <div class="card">
            <div class="card-header pb-0 p-3">
                <div class="d-flex justify-content-between">
                    <h6 class="mb-2">Quản Lý Hệ Thống</h6>
                </div>
            </div>
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="card card-body border card-plain border-radius-lg d-flex align-items-center flex-row">
                            <div class="icon icon-shape bg-gradient-primary shadow-primary text-center rounded-circle me-3">
                                <i class="fa fa-shopping-bag text-lg opacity-10" aria-hidden="true"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-1">Quản Lý Sản Phẩm</h6>
                                <p class="text-sm mb-0">Thêm, sửa, xóa sản phẩm</p>
                            </div>
                            <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-primary btn-sm mb-0">
                                Xem <i class="fa fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="card card-body border card-plain border-radius-lg d-flex align-items-center flex-row">
                            <div class="icon icon-shape bg-gradient-info shadow-info text-center rounded-circle me-3">
                                <i class="fa fa-shield text-lg opacity-10" aria-hidden="true"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-1">Quản Lý Vai Trò</h6>
                                <p class="text-sm mb-0">Phân quyền người dùng</p>
                            </div>
                            <a asp-area="Admin" asp-controller="Role" asp-action="Index" class="btn btn-info btn-sm mb-0">
                                Xem <i class="fa fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="card card-body border card-plain border-radius-lg d-flex align-items-center flex-row">
                            <div class="icon icon-shape bg-gradient-info shadow-info text-center rounded-circle me-3">
                                <i class="fa fa-shield text-lg opacity-10" aria-hidden="true"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-1">Quản Lý Slide</h6>
                                <p class="text-sm mb-0">sửa chữa thay đổi slide </p>
                            </div>
                            <a asp-area="Admin" asp-controller="Slide" asp-action="Index" class="btn btn-info btn-sm mb-0">
                                Xem <i class="fa fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="card card-body border card-plain border-radius-lg d-flex align-items-center flex-row">
                            <div class="icon icon-shape bg-gradient-secondary shadow-secondary text-center rounded-circle me-3">
                                <i class="fa fa-file-text-o text-lg opacity-10" aria-hidden="true"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-1">Quản Lý Bài Viết</h6>
                                <p class="text-sm mb-0">Thêm, sửa, xóa bài viết</p>
                            </div>
                            <a asp-area="Admin" asp-controller="Posts" asp-action="Index" class="btn btn-secondary btn-sm mb-0">
                                Xem <i class="fa fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







