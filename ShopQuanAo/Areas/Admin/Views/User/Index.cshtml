@model IEnumerable<ShopQuanAo.Models.ViewModels.UserManagementViewModel>

@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-lg-flex">
                        <div>
                            <h5 class="mb-0">Danh sách người dùng</h5>
                            <p class="text-sm mb-0">
                                Quản lý thông tin người dùng và phân quyền
                            </p>
                        </div>
                        <div class="ms-auto my-auto mt-lg-0 mt-4">
                            <div class="ms-auto my-auto">
                                <span class="badge badge-sm bg-gradient-success">
                                    Tổng: @Model.Count() người dùng
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body px-0 pb-0">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show mx-4" role="alert">
                            <span class="alert-icon"><i class="fas fa-check"></i></span>
                            <span class="alert-text">@TempData["Success"]</span>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show mx-4" role="alert">
                            <span class="alert-icon"><i class="fas fa-exclamation-triangle"></i></span>
                            <span class="alert-text">@TempData["Error"]</span>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Người dùng
                                    </th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                        Liên hệ
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Vai trò
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Trạng thái
                                    </th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                        Ngày tạo
                                    </th>
                                    <th class="text-secondary opacity-7"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div>
                                                    <div class="avatar avatar-sm me-3 bg-gradient-primary rounded-circle text-white d-flex align-items-center justify-content-center">
                                                        @user.FullName.Substring(0, 1).ToUpper()
                                                    </div>
                                                </div>
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-xs">@user.FullName</h6>
                                                    <p class="text-xs text-secondary mb-0">@user.UserName</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@user.Email</p>
                                            <p class="text-xs text-secondary mb-0">
                                                @(string.IsNullOrEmpty(user.PhoneNumber) ? "Chưa có SĐT" : user.PhoneNumber)
                                            </p>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            @if (user.Roles.Any())
                                            {
                                                @foreach (var role in user.Roles)
                                                {
                                                    <span class="badge badge-sm bg-gradient-@(role == "Admin" ? "danger" : "info") me-1">
                                                        @role
                                                    </span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="badge badge-sm bg-gradient-secondary">Chưa có vai trò</span>
                                            }
                                        </td>
                                        <td class="align-middle text-center">
                                            @if (user.EmailConfirmed)
                                            {
                                                <span class="badge badge-sm bg-gradient-success">
                                                    <i class="fas fa-check-circle"></i> Đã xác thực
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-sm bg-gradient-warning">
                                                    <i class="fas fa-exclamation-circle"></i> Chưa xác thực
                                                </span>
                                            }
                                            <br />
                                            @if (user.IsActive)
                                            {
                                                <span class="badge badge-sm bg-gradient-success mt-1">
                                                    <i class="fas fa-user-check"></i> Hoạt động
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-sm bg-gradient-danger mt-1">
                                                    <i class="fas fa-user-lock"></i> Bị khóa
                                                </span>
                                            }
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs">
                                                @(user.CreatedDate?.ToString("dd/MM/yyyy") ?? "N/A")
                                            </span>
                                        </td>
                                        <td class="align-middle">
                                            <div class="dropdown">
                                                <a href="#" class="text-secondary" id="dropdownMenuButton-@user.Id" 
                                                   data-bs-toggle="dropdown" aria-expanded="false">
                                                    <i class="fas fa-ellipsis-v"></i>
                                                </a>
                                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton-@user.Id">
                                                    <li>
                                                        <a class="dropdown-item" asp-action="Edit" asp-route-id="@user.Id">
                                                            <i class="fas fa-edit me-2"></i>Chỉnh sửa
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <form asp-action="ToggleActive" method="post" class="d-inline">
                                                            <input type="hidden" name="id" value="@user.Id" />
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="dropdown-item" 
                                                                    onclick="return confirm('@(user.IsActive ? "Bạn có chắc muốn khóa tài khoản này?" : "Bạn có chắc muốn kích hoạt tài khoản này?")')">
                                                                <i class="fas fa-@(user.IsActive ? "lock" : "unlock") me-2"></i>
                                                                @(user.IsActive ? "Khóa tài khoản" : "Kích hoạt")
                                                            </button>
                                                        </form>
                                                    </li>
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li>
                                                        <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@user.Id">
                                                            <i class="fas fa-trash me-2"></i>Xóa
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto close alerts after 3 seconds
        setTimeout(function () {
            $('.alert').fadeOut('slow');
        }, 3000);
    </script>
}

