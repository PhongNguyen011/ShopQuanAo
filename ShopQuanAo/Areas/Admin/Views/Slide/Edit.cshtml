@model ShopQuanAo.Models.SlideModel
@{
    ViewData["Title"] = "Sửa Slide";
}

<div class="row">
    <div class="col-12 col-md-8 mx-auto">
        <div class="card mb-4 shadow-sm">
            <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                <h6 class="mb-0 text-uppercase text-primary">Cập Nhật Slide</h6>
                <a asp-action="Index" class="btn btn-sm btn-secondary">
                    <i class="fa fa-arrow-left"></i> Quay Lại
                </a>
            </div>

            <div class="card-body pt-3">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label class="form-label fw-bold">Tiêu đề</label>
                        <input asp-for="Title" class="form-control border border-1 border-secondary rounded-3" placeholder="Nhập tiêu đề..." />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Mô tả</label>
                        <textarea asp-for="Description" class="form-control border border-1 border-secondary rounded-3" rows="3" placeholder="Nhập mô tả..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Hình ảnh hiện tại</label><br />
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" width="280" class="border rounded-3 shadow-sm mb-2" alt="Slide Image" />
                        }
                        else
                        {
                            <p class="text-muted fst-italic">Chưa có hình ảnh</p>
                        }

                        <input type="file" name="imageFile" class="form-control mt-2 border border-1 border-secondary rounded-3" accept="image/*" />
                    </div>

                    <div class="form-check form-switch mb-4">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" id="IsActiveSwitch" />
                        <label for="IsActiveSwitch" class="form-check-label fw-bold">Hiển thị slide này</label>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save me-1"></i> Cập nhật
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fa fa-times me-1"></i> Hủy
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
