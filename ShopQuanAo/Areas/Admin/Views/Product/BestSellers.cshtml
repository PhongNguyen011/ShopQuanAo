@model IEnumerable<ShopQuanAo.ViewModels.BestSellerProductViewModel>

@{
    ViewData["Title"] = "Sản Phẩm Bán Chạy";
    var top = ViewBag.Top as int? ?? Model.Count();
}

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                <h6>Top @top Sản Phẩm Bán Chạy</h6>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="fa fa-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
                <div class="table-responsive p-0">
                    @if (!Model.Any())
                    {
                        <div class="p-3">
                            <div class="alert alert-info mb-0">
                                Chưa có dữ liệu đơn hàng (Delivered) để thống kê.
                            </div>
                        </div>
                    }
                    else
                    {
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Sản Phẩm</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Danh Mục</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Giá</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Đã Bán</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Doanh Thu</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Trạng Thái</th>
                                    <th class="text-secondary opacity-7"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var index = 0;
                                }
                                @foreach (var item in Model)
                                {
                                    index++;
                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div>
                                                    <img src="@Url.Content(item.DisplayImageUrl)" class="avatar avatar-sm me-3" alt="product">
                                                </div>
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">
                                                        @index. @item.Name
                                                    </h6>
                                                    <p class="text-xs text-secondary mb-0">
                                                        Mã SP: @item.ProductId
                                                    </p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@item.Category</p>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <p class="text-xs font-weight-bold mb-0">@item.Price.ToString("N0") VNĐ</p>
                                            @if (item.OldPrice.HasValue && item.OldPrice.Value > item.Price)
                                            {
                                                <p class="text-xs text-secondary mb-0"><del>@item.OldPrice.Value.ToString("N0") VNĐ</del></p>
                                            }
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@item.SoldQuantity</span>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@item.Revenue.ToString("N0") VNĐ</span>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            @if (item.IsAvailable)
                                            {
                                                <span class="badge badge-sm bg-gradient-success">Có Sẵn</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-sm bg-gradient-secondary">Hết Hàng</span>
                                            }
                                            @if (item.IsFeatured)
                                            {
                                                <span class="badge badge-sm bg-gradient-info">Nổi Bật</span>
                                            }
                                            @if (item.IsOnSale)
                                            {
                                                <span class="badge badge-sm bg-gradient-danger">Sale</span>
                                            }
                                        </td>
                                        <td class="align-middle">
                                            <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-link text-info text-gradient px-2 mb-0" title="Chi tiết">
                                                <i class="fa fa-eye text-info me-2"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-link text-dark px-2 mb-0" title="Sửa">
                                                <i class="fa fa-pencil text-dark me-2"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
