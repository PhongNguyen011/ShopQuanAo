@model ShopQuanAo.Models.ContactMessage
@{
    ViewData["Title"] = "Chi tiết liên hệ";
}
@section Styles {
    <style>
        .elev-card {
            border: 0;
            border-radius: 20px;
            box-shadow: 0 10px 28px rgba(15,23,42,.07);
            overflow: hidden;
        }

        .elev-header {
            background: linear-gradient(135deg, #fdf4ff 0%, #eff6ff 100%);
            border-bottom: 1px solid #e9ecef;
            padding: 18px 20px;
        }

        .elev-title {
            font-size: 1.35rem;
            font-weight: 800;
            color: #0f172a;
            margin: 0;
        }

        dt {
            color: #64748b;
            font-weight: 700;
        }

        dd {
            color: #0f172a;
        }

        pre {
            background: #f8fafc;
            border: 1px solid #e9ecef;
            border-radius: 14px;
            padding: .9rem;
        }

        .badge-pill {
            border-radius: 999px;
            padding: .45rem .7rem;
            font-weight: 700;
        }

        .badge-unread {
            background: #ffedd5;
            color: #9a3412;
        }

        .badge-read {
            background: #cffafe;
            color: #0c4a6e;
        }

        .badge-replied {
            background: #dcfce7;
            color: #166534;
        }

        .btn-success {
            border-radius: 12px;
            box-shadow: 0 6px 14px rgba(16,185,129,.25);
            border: 0;
        }

        .btn-outline-danger {
            border-radius: 12px;
        }

        .btn-secondary {
            border-radius: 12px;
        }
    </style>
}
<div class="card elev-card">
    <div class="elev-header d-flex align-items-center">
        <h5 class="elev-title mb-0">Chi tiết liên hệ #@Model.Id</h5>
        <span class="ms-auto">
            @if (!Model.IsReplied)
            {
                <a asp-action="Reply" asp-route-id="@Model.Id" class="btn btn-sm btn-success">Trả lời</a>
            }
        </span>
    </div>

    <div class="card-body">
        @if (TempData["msg"] != null)
        {
            <div class="alert alert-success">@TempData["msg"]</div>
        }

        <dl class="row mb-0">
            <dt class="col-sm-3">Thời gian</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">Tên</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9"><a href="mailto:@Model.Email">@Model.Email</a></dd>

            @if (!string.IsNullOrEmpty(Model.Website))
            {
                <dt class="col-sm-3">Website</dt>
                <dd class="col-sm-9"><a href="@Model.Website" target="_blank" rel="noopener">@Model.Website</a></dd>
            }

            <dt class="col-sm-3">Nội dung</dt>
            <dd class="col-sm-9"><pre class="mb-0" style="white-space:pre-wrap">@Model.Message</pre></dd>

            <dt class="col-sm-3">Trạng thái</dt>
            <dd class="col-sm-9">
                @if (Model.IsReplied)
                {
                    <span class="badge badge-pill badge-replied">Đã trả lời</span>
                    <span class="text-muted ms-2">@Model.RepliedAt?.ToString("dd/MM/yyyy HH:mm")</span>
                }
                else if (Model.IsRead)
                {
                    <span class="badge badge-pill badge-read">Đã đọc</span>
                    <span class="text-muted ms-2">@Model.ReadAt?.ToString("dd/MM/yyyy HH:mm")</span>
                }
                else
                {
                    <span class="badge badge-pill badge-unread">Chưa đọc</span>
                }
            </dd>
        </dl>

        @if (Model.IsReplied)
        {
            <hr />
            <h6 class="fw-bold mb-2">Phản hồi đã gửi</h6>
            <div class="mb-1"><b>Tiêu đề:</b> @Model.ReplySubject</div>
            <div class="mb-1"><b>Bởi:</b> @Model.RepliedBy</div>
            <pre class="mt-2" style="white-space:pre-wrap">@Model.ReplyBody</pre>
        }

        <div class="d-flex mt-4">
            <form asp-action="Delete" method="post" onsubmit="return confirm('Xoá liên hệ này?');">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />
                <button class="btn btn-outline-danger">Xoá</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary ms-auto">Quay lại</a>
        </div>
    </div>
</div>
